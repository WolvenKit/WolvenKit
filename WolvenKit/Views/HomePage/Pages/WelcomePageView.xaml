<catel:UserControl
    x:Class="WolvenKit.Views.HomePage.Pages.WelcomePageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:catel="http://schemas.catelproject.com"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:o="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:sync1="clr-namespace:Syncfusion.UI.Xaml.Controls.Barcode;assembly=Syncfusion.SfBarcode.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"

    
    >

    <catel:UserControl.Resources>
        <ResourceDictionary>
            <DrawingBrush
                x:Key="CloudDrawingBrushMain"
                o:Freeze="True"
                Opacity="0.3"
                RenderOptions.CacheInvalidationThresholdMaximum="2.0"
                RenderOptions.CacheInvalidationThresholdMinimum="0.5"
                RenderOptions.CachingHint="Cache"
                Stretch="Uniform"
                TileMode="Tile"
                Viewport="0,0,77,77"
                ViewportUnits="Absolute">
                <DrawingBrush.Drawing>
                    <ImageDrawing
                        o:Freeze="True"
                        ImageSource="pack://application:,,,/Resources/Media/Images/Application/cloud.png"
                        Rect="0,0,15,15" />
                </DrawingBrush.Drawing>
            </DrawingBrush>
        </ResourceDictionary>
    </catel:UserControl.Resources>

    <Grid
        x:Name="topGrid"
        Grid.RowSpan="4"
        Grid.ColumnSpan="5"
        Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="300" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{DynamicResource ContentBackgroundAlt2}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="500" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid>
                    <Border
                        HorizontalAlignment="Left"
                        VerticalAlignment="top"
                        BorderBrush="{DynamicResource ContentBackgroundAlt}">
                        <StackPanel VerticalAlignment="top">

                            <StackPanel
                                Margin="0,5,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                                <Grid>
                                    <iconPacks:PackIconCodicons
                                        Grid.Row="0"
                                        Width="50"
                                        Height="50"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                        Kind="Hubot"
                                        Spin="False"
                                        SpinAutoReverse="False" />
                                </Grid>
                                <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                                    <TextBlock
                                        Grid.Row="0"
                                        Margin="10,10,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                        Text="Welcome to WolvenKit" />
                                    <hc:Divider
                                        Margin="0,5,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch" />
                                </StackPanel>
                            </StackPanel>
                            <TextBlock
                                Width="300"
                                Margin="15,15,0,0"
                                HorizontalAlignment="Left"
                                TextAlignment="Justify"
                                TextWrapping="Wrap">
                                We would like to thank every person and enitity who helped and contributed to this ambitious project,<LineBreak />
                                whom, without their support it wouldn't exist.<LineBreak /><LineBreak />
                                Happy Modding!  -  RED Modding Tools team</TextBlock>

                            <sync1:SfBarcode
                                x:Name="barcode"
                                Width="90"
                                Height="90"
                                Margin="15,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                DarkBarBrush="Red"
                                DisplayText="False"
                                LightBarBrush="{DynamicResource MahApps.Brushes.Accent4}"
                                Symbology="QRBarcode"
                                Text="http://www.redmodding.org" />
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">
                <Grid HorizontalAlignment="Right">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <StackPanel
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="0"
                        Margin="0,15,0,0"
                        HorizontalAlignment="Right">
                        <StackPanel
                            Margin="0,0,15,0"
                            FlowDirection="RightToLeft"
                            Orientation="Horizontal">
                            <iconPacks:PackIconBoxIcons
                                Grid.Row="0"
                                Width="25"
                                Height="25"
                                Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                Kind="RegularNetworkChart"
                                Spin="False"
                                SpinAutoReverse="False" />

                            <TextBlock
                                Margin="10,0,5,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="18"
                                Text="Social Media" />
                        </StackPanel>
                        <hc:Divider Margin="15,5,15,3" />
                        <hc:ButtonGroup
                            Margin="5,5,5,5"
                            Orientation="Vertical"
                            Style="{DynamicResource ButtonGroupSolid}">
                            <Button
                                x:Name="irathernot"
                                Width="200"
                                Height="33"
                                Margin="2"
                                HorizontalAlignment="Stretch"
                                BorderBrush="{DynamicResource ContentBackground}"
                                BorderThickness="2"
                                Command="{catel:CommandManagerBinding Application.OpenLink}"
                                CommandParameter="{Binding DiscordLink}"
                                Style="{DynamicResource ButtonDefault}">

                                <Grid Width="125">
                                    <iconPacks:PackIconBoxIcons
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Kind="LogosDiscord" />
                                    <TextBlock
                                        Margin="5,0,35,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="Discord" />
                                </Grid>
                            </Button>

                            <Button
                                Width="200"
                                Height="33"
                                Margin="2"
                                HorizontalAlignment="Stretch"
                                BorderBrush="{DynamicResource ContentBackground}"
                                BorderThickness="2"
                                Command="{catel:CommandManagerBinding Application.OpenLink}"
                                CommandParameter="{Binding TwitterLink}"
                                Style="{DynamicResource ButtonDefault}">
                                <Grid Width="125">
                                    <iconPacks:PackIconBoxIcons HorizontalAlignment="Right" Kind="LogosTwitter" />
                                    <TextBlock
                                        Margin="5,0,35,0"
                                        HorizontalAlignment="Right"
                                        Text="Twitter" />
                                </Grid>
                            </Button>
                        </hc:ButtonGroup>

                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="0"
                            HorizontalAlignment="Left">
                            <StackPanel
                                Margin="0,0,15,0"
                                FlowDirection="RightToLeft"
                                Orientation="Horizontal">
                                <iconPacks:PackIconBoxIcons
                                    Grid.Row="0"
                                    Width="25"
                                    Height="25"
                                    Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                    Kind="RegularDonateHeart"
                                    Spin="False"
                                    SpinAutoReverse="False" />

                                <TextBlock
                                    Margin="10,0,5,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Text="Support Us" />
                            </StackPanel>
                            <hc:Divider Margin="15,5,15,0" />
                            <hc:ButtonGroup
                                Margin="5,5,5,5"
                                Orientation="Vertical"
                                Style="{DynamicResource ButtonGroupSolid}">
                                <Button
                                    Width="200"
                                    Height="33"
                                    Margin="2"
                                    HorizontalAlignment="Stretch"
                                    BorderBrush="{DynamicResource ContentBackground}"
                                    BorderThickness="2"
                                    Command="{catel:CommandManagerBinding Application.OpenLink}"
                                    CommandParameter="{Binding OpenCollectiveLink}"
                                    Style="{DynamicResource ButtonDefault}">

                                    <Grid Width="125">
                                        <iconPacks:PackIconBoxIcons HorizontalAlignment="Right" Kind="SolidDonateHeart" />
                                        <TextBlock
                                            Margin="5,0,35,0"
                                            HorizontalAlignment="Right"
                                            Text="Open Collective" />
                                    </Grid>
                                </Button>

                                <Button
                                    Width="200"
                                    Height="33"
                                    Margin="2"
                                    HorizontalAlignment="Stretch"
                                    BorderBrush="{DynamicResource ContentBackground}"
                                    BorderThickness="2"
                                    Command="{catel:CommandManagerBinding Application.OpenLink}"
                                    CommandParameter="{Binding PatreonLink}"
                                    Style="{DynamicResource ButtonDefault}">
                                    <Grid Width="125">
                                        <iconPacks:PackIconBoxIcons HorizontalAlignment="Right" Kind="LogosPatreon" />
                                        <TextBlock
                                            Margin="5,0,35,0"
                                            HorizontalAlignment="Right"
                                            Text="Patreon" />
                                    </Grid>
                                </Button>
                            </hc:ButtonGroup>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Margin="5,15,10,0"
                        HorizontalAlignment="Right">
                        <StackPanel
                            Margin="0,0,15,0"
                            FlowDirection="RightToLeft"
                            Orientation="Horizontal">
                            <iconPacks:PackIconBoxIcons
                                Grid.Row="0"
                                Width="25"
                                Height="25"
                                Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                Kind="RegularBoltCircle"
                                Spin="False"
                                SpinAutoReverse="False" />

                            <TextBlock
                                Margin="10,0,5,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="18"
                                Text="Quick Access" />
                        </StackPanel>
                        <hc:Divider Margin="15,5,15,5" />
                        <hc:ButtonGroup
                            Margin="5,5,5,5"
                            Orientation="Vertical"
                            Style="{DynamicResource ButtonGroupSolid}">
                            <Button
                                x:Name="sdasd"
                                Width="200"
                                Height="33"
                                Margin="2"
                                HorizontalAlignment="Stretch"
                                BorderBrush="{DynamicResource ContentBackground}"
                                BorderThickness="2"
                                Command="{catel:CommandManagerBinding Application.NewProject}"
                                Style="{DynamicResource ButtonDefault}">
                                <Grid Width="125">
                                    <iconPacks:PackIconCodicons HorizontalAlignment="Right" Kind="Add" />
                                    <TextBlock
                                        Margin="5,0,35,0"
                                        HorizontalAlignment="Right"
                                        Text="Create Project" />
                                </Grid>
                            </Button>

                            <Button
                                x:Name="asd"
                                Width="200"
                                Height="33"
                                Margin="2"
                                HorizontalAlignment="Stretch"
                                BorderBrush="{DynamicResource ContentBackground}"
                                BorderThickness="2"
                                Command="{catel:CommandManagerBinding Application.OpenProject}"
                                Style="{DynamicResource ButtonDefault}">
                                <Grid Width="125">
                                    <iconPacks:PackIconCodicons HorizontalAlignment="Right" Kind="GoToFile" />
                                    <TextBlock
                                        Margin="5,0,35,0"
                                        HorizontalAlignment="Right"
                                        Text="Open Project" />
                                </Grid>
                            </Button>
                            <Button
                                x:Name="asad"
                                Width="200"
                                Height="33"
                                Margin="2"
                                HorizontalAlignment="Stretch"
                                BorderBrush="{DynamicResource ContentBackground}"
                                BorderThickness="2"
                                Command="{Binding SettingsCommand}"
                                Style="{DynamicResource ButtonDefault}">
                                <Grid Width="125">
                                    <iconPacks:PackIconCodicons HorizontalAlignment="Right" Kind="Settings" />
                                    <TextBlock
                                        Margin="5,0,35,0"
                                        HorizontalAlignment="Right"
                                        Text="Settings" />
                                </Grid>
                            </Button>

                            <Button
                                x:Name="asda"
                                Width="200"
                                Height="33"
                                Margin="2"
                                HorizontalAlignment="Stretch"
                                BorderBrush="{DynamicResource ContentBackground}"
                                BorderThickness="2"
                                Command="{Binding TutorialsCommand}"
                                Style="{DynamicResource ButtonDefault}">
                                <Grid Width="125">
                                    <iconPacks:PackIconCodicons HorizontalAlignment="Right" Kind="Question" />
                                    <TextBlock
                                        Margin="5,0,35,0"
                                        HorizontalAlignment="Right"
                                        Text="Tutorials" />
                                </Grid>
                            </Button>
                            <Button
                                x:Name="asdasd"
                                Width="200"
                                Height="33"
                                Margin="2"
                                HorizontalAlignment="Stretch"
                                BorderBrush="{DynamicResource ContentBackground}"
                                BorderThickness="2"
                                Command="{Binding WikiCommand}"
                                Style="{DynamicResource ButtonDefault}">
                                <Grid Width="125">
                                    <iconPacks:PackIconCodicons HorizontalAlignment="Right" Kind="Info" />
                                    <TextBlock
                                        Margin="5,0,35,0"
                                        HorizontalAlignment="Right"
                                        Text="Wiki" />
                                </Grid>
                            </Button>
                        </hc:ButtonGroup>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>

        <Grid
            x:Name="HeighBinder"
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource ContentBackgroundAlt2}">

            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="500" />
            </Grid.ColumnDefinitions>

            <Border
                x:Name="lokz"
                Grid.Column="1"
                Margin="0,0,0,35"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Background="{DynamicResource ContentBackgroundAlt2}"
                CornerRadius="2">

                <StackPanel>

                    <StackPanel
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="0"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Right">
                        <StackPanel
                            Margin="0,0,15,0"
                            FlowDirection="RightToLeft"
                            Orientation="Horizontal">
                            <iconPacks:PackIconSimpleIcons
                                Grid.Row="0"
                                Width="25"
                                Height="25"
                                Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                Kind="AirPlayVideo"
                                Spin="False"
                                SpinAutoReverse="False" />

                            <TextBlock
                                Margin="10,0,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontSize="18"
                                Text="Featured Showcase" />
                        </StackPanel>
                    </StackPanel>
                    <hc:Divider Margin="15,5,15,3" />

                    <wv2:WebView2
                        Width="414"
                        Height="{Binding ElementName=lokz, Path=ActualHeight}"
                        MaxWidth="414"
                        Margin="0,0,15,0"
                        Source="https://www.youtube.com/embed/WfEi3QwhTIs" />
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="2" Background="{DynamicResource ContentBackgroundAlt2}">
            <StackPanel Orientation="Vertical">

                <StackPanel Margin="5,8,32,5" Orientation="Horizontal">
                    <iconPacks:PackIconCodicons
                        Grid.Row="0"
                        Width="25"
                        Height="25"
                        Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                        Kind="GoToFile"
                        Spin="False"
                        SpinAutoReverse="False" />

                    <TextBlock
                        x:Name="RecentProjectTour"
                        Margin="10,0,0,0"
                        FontSize="18"
                        Text="Recent Projects" />
                </StackPanel>
                <hc:Divider Margin="0,0,0,0" />
            </StackPanel>
            <syncfusion:CardView
                Name="cardView"
                Height="220"
                Margin="0,60,0,0"
                Background="Transparent"
                CanSort="False"
                ItemsSource="{Binding FancyProjects}"
                ShowHeader="False">
                <syncfusion:CardView.HeaderTemplate>
                    <DataTemplate>
                        <Border Margin="-7,-9,-7,-9" Background="{DynamicResource MahApps.Brushes.Accent4}">
                            <Border Margin="0" Background="{StaticResource CloudDrawingBrushMain}">

                                <Grid Height="50">
                                    <StackPanel Orientation="Horizontal">
                                        <Border>
                                            <hc:Tag
                                                Width="42"
                                                Height="40"
                                                Margin="0,0,0,0"
                                                HorizontalAlignment="Center"
                                                HorizontalContentAlignment="Left"
                                                Background="{x:Null}"
                                                Selectable="False"
                                                ShowCloseButton="False">
                                                <hc:Tag.Header>

                                                    <Image Source="{Binding Image}" Stretch="Fill">
                                                        <Image.Effect>

                                                            <hc:BrightnessEffect Brightness="0.9" />
                                                        </Image.Effect>
                                                    </Image>
                                                </hc:Tag.Header>
                                            </hc:Tag>
                                        </Border>
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="Bold"
                                            Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                            Text="{Binding Path=SafeName}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Border>
                    </DataTemplate>
                </syncfusion:CardView.HeaderTemplate>
                <syncfusion:CardView.ItemTemplate>
                    <DataTemplate>

                        <StackPanel Orientation="Horizontal">
                            <Border
                                Width="196"
                                Margin="0,0,0,0"
                                Background="{DynamicResource RegionBrush}"
                                BorderBrush="{DynamicResource MahApps.Brushes.Accent4}"
                                BorderThickness="2,0,2,2"
                                CornerRadius="0,0,4,4">

                                <Grid>
                                    <StackPanel Margin="5" Orientation="Vertical">
                                        <StackPanel Margin="5" Orientation="Horizontal">

                                            <Border
                                                Height="25"
                                                VerticalAlignment="Center"
                                                Background="{DynamicResource RegionBrush}"
                                                CornerRadius="5,2,2,2">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        Width="74"
                                                        Margin="5"
                                                        VerticalAlignment="Center"
                                                        Text="Project Type : " />
                                                    <TextBlock
                                                        Width="280"
                                                        Margin="0"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding Type}" />
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                        <StackPanel Margin="5" Orientation="Horizontal">

                                            <Border
                                                Height="25"
                                                VerticalAlignment="Center"
                                                Background="{DynamicResource RegionBrush}"
                                                CornerRadius="5,2,2,2">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock
                                                        Width="50"
                                                        Margin="5"
                                                        VerticalAlignment="Center"
                                                        Text="Created : " />
                                                    <TextBlock
                                                        Width="280"
                                                        Margin="0"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding CreationDate}" />
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>

                                        <StackPanel
                                            Margin="5"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            Orientation="Horizontal">
                                            <Button
                                                Height="35"
                                                HorizontalAlignment="Left"
                                                Command="{catel:CommandManagerBinding Application.OpenProject}"
                                                CommandParameter="{Binding ProjectPath}">
                                                <iconPacks:PackIconCodicons Kind="Edit" />
                                            </Button>
                                            <hc:Divider
                                                MaxHeight="16"
                                                LineStroke="{DynamicResource MahApps.Brushes.Accent3}"
                                                LineStrokeThickness="2"
                                                Orientation="Vertical" />
                                            <Button
                                                Height="35"
                                                HorizontalAlignment="Left"
                                                Command="{Binding ElementName=topGrid, Path=DataContext.OpenInExplorer}"
                                                CommandParameter="{Binding ProjectPath}">
                                                <iconPacks:PackIconCodicons Kind="FolderOpened" />
                                            </Button>
                                            <hc:Divider
                                                MaxHeight="16"
                                                LineStroke="{DynamicResource MahApps.Brushes.Accent3}"
                                                LineStrokeThickness="2"
                                                Orientation="Vertical" />
                                            <Button
                                                Height="35"
                                                HorizontalAlignment="Left"
                                                Command="{catel:CommandManagerBinding Application.DeleteProject}"
                                                CommandParameter="{Binding ProjectPath}">
                                                <iconPacks:PackIconCodicons Kind="Trash" />
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </syncfusion:CardView.ItemTemplate>
            </syncfusion:CardView>
        </Grid>
    </Grid>
</catel:UserControl>
