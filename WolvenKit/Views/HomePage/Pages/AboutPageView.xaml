                         Margin="0,35,0,10"
                         HorizontalContentAlignment="Stretch"
                         VerticalContentAlignment="Stretch"
                         Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                         FlowDirection="RightToLeft"
                         FontSize="12"
                         Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                         ItemsSource="{Binding GithubCollection}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled"
                         TitleInfo="Test"
                         TitleLabel="Test">
                            <hc:GithubTimeLine.Style>
                                <Style BasedOn="{StaticResource TreeViewBaseStyle}" TargetType="{x:Type hc:GithubTimeLine}">
                                    <Setter Property="ItemContainerStyle" Value="{DynamicResource GithubTreeViewItemBaseStyle}" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <Grid Margin="0,30">
                                                    <Border
                                                     Margin="48,-25,0,-10"
                                                     HorizontalAlignment="Left"
                                                     BorderBrush="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                                                     BorderThickness="1,0,0,0" />
                                                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                                        <ItemsPresenter x:Name="ItemPresent" />
                                                    </ScrollViewer>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="ItemTemplate">
                                        <Setter.Value>
                                            <HierarchicalDataTemplate DataType="{x:Type hc:GithubTimeLine}" ItemsSource="{Binding Members}">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label
                                                     Width="80"
                                                     Height="43"
                                                     Margin="5"
                                                     HorizontalContentAlignment="Center"
                                                     VerticalContentAlignment="Center"
                                                     BorderThickness="0"
                                                     Content="{Binding TitleLabel}"
                                                     FontSize="15"
                                                     FontWeight="DemiBold"
                                                     Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                                     Style="{Binding TitleStyle}" />
                                                    <TextBlock
                                                     Margin="5,0,0,0"
                                                     VerticalAlignment="Center"
                                                     FontSize="18"
                                                     FontWeight="Thin"
                                                     Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                                     Text="{Binding TitleInfo}" />
                                                </StackPanel>
                                                <HierarchicalDataTemplate.ItemTemplate>
                                                    <DataTemplate DataType="{x:Type hc:ContentMember}">

                                                        <StackPanel Margin="0,0,0,0" Orientation="Horizontal">
                                                            <hc:Badge
                                                             Height="30"
                                                             Margin="15,29,5,0"
                                                             Background="{DynamicResource MahApps.Brushes.Accent}"
                                                             BorderBrush="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                                                             BorderThickness="2"
                                                             Status="Dot"
                                                             Style="{StaticResource BadgeDanger}" />

                                                            <hc:Divider
                                                             Width="25"
                                                             VerticalAlignment="Center"
                                                             LineStroke="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                                                             LineStrokeThickness="3" />

                                                            <Label
                                                             Width="80"
                                                             Height="33"
                                                             Margin="0,5,0,5"
                                                             HorizontalContentAlignment="Center"
                                                             VerticalContentAlignment="Center"
                                                             BorderThickness="0"
                                                             Content="{Binding ContentTitle}"
                                                             FontSize="10"
                                                             FontWeight="DemiBold"
                                                             Foreground="{DynamicResource MahApps.Brushes.ThemeBackground}"
                                                             Style="{Binding ContentStyle}" />
                                                            <Border Height="55" BorderBrush="{x:Null}">
                                                                <TextBlock
                                                                 MaxWidth="275"
                                                                 Margin="5,0"
                                                                 VerticalAlignment="Center"
                                                                 FontSize="14"
                                                                 Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                                                 Opacity="0.5"
                                                                 Text="{Binding ContentInfo}"
                                                                 TextAlignment="Center"
                                                                 TextWrapping="Wrap" />
                                                            </Border>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </HierarchicalDataTemplate.ItemTemplate>
                                            </HierarchicalDataTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </hc:GithubTimeLine.Style>
                            <hc:GithubTimeLine.ItemContainerStyle>
                                <Style BasedOn="{StaticResource BaseStyle}" TargetType="{x:Type TreeViewItem}">
                                    <Setter Property="FocusVisualStyle" Value="{StaticResource FocusVisualRadius0Margin0}" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Padding" Value="10,0" />
                                    <Setter Property="IsExpanded" Value="True" />
                                    <Setter Property="BorderThickness" Value="0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type TreeViewItem}">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition MinHeight="32" />
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <Border
                                                     x:Name="Bd"
                                                     Padding="{TemplateBinding Padding}"
                                                     Background="{TemplateBinding Background}"
                                                     BorderBrush="{TemplateBinding BorderBrush}"
                                                     BorderThickness="{TemplateBinding BorderThickness}"
                                                     SnapsToDevicePixels="true">
                                                        <StackPanel Margin="{Binding Converter={StaticResource TreeViewItemMarginConverter}, RelativeSource={RelativeSource TemplatedParent}}" Orientation="Horizontal">
                                                            <ContentPresenter
                                                             x:Name="PART_Header"
                                                             VerticalAlignment="Center"
                                                             ContentSource="Header"
                                                             SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                        </StackPanel>
                                                    </Border>
                                                    <ItemsPresenter x:Name="ItemsHost" Grid.Row="1" />
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsExpanded" Value="false">
                                                        <Setter TargetName="ItemsHost" Property="Visibility" Value="Collapsed" />
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="true">
                                                        <Setter TargetName="Bd" Property="Background" Value="{x:Null}" />
                                                    </Trigger>
                                                    <Trigger Property="IsEnabled" Value="false">
                                                        <Setter Property="Foreground" Value="{StaticResource {x:Static SystemColors.GrayTextBrushKey}}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </hc:GithubTimeLine.ItemContainerStyle>
                        </hc:GithubTimeLine>

