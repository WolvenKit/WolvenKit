                         Height="30"
                         Margin="0,690,0,0"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Bottom">
                            <hc:AnimationPath
                             Margin="385,-2,0,2"
                             HorizontalAlignment="Left"
                             Data="{DynamicResource GithubGeometry}"
                             PathLength="70"
                             Stretch="Uniform"
                             Stroke="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                             StrokeThickness="2"
                             Duration="00:00:08" />

                            <StackPanel
                             Margin="0,0,75,0"
                             HorizontalAlignment="Right"
                             FlowDirection="LeftToRight"
                             Orientation="Horizontal">
                                <hc:Shield
                                 x:Name="WatchShield"
                                 Margin="75,0,0,0"
                                 HorizontalAlignment="Right"
                                 Status="5.0"
                                 Subject="Watchers"
                                 Color="{DynamicResource MahApps.Brushes.Accent4}" />
                                <hc:Divider
                                 MaxHeight="16"
                                 LineStroke="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                                 LineStrokeThickness="2"
                                 Orientation="Vertical" />
                                <hc:Shield
                                 x:Name="StarShield"
                                 Margin="0,0,0,0"
                                 HorizontalAlignment="Left"
                                 Status="5.0"
                                 Subject="Stars"
                                 Color="{DynamicResource MahApps.Brushes.Accent4}" />
                                <hc:Divider
                                 MaxHeight="16"
                                 LineStroke="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                                 LineStrokeThickness="2"
                                 Orientation="Vertical" />
