                                 x:Name="ForkShield"
                                 Margin="0,0,0,0"
                                 HorizontalAlignment="Left"
                                 Status="5.0"
                                 Subject="Forks"
                                 Color="{DynamicResource MahApps.Brushes.Accent4}" />
                            </StackPanel>
