<reactiveUi:ReactiveUserControl
    x:Class="WolvenKit.Views.HomePage.Pages.PluginsToolView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:WolvenKit.ViewModels.Dialogs;assembly=WolvenKit.App"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:homepage="clr-namespace:WolvenKit.ViewModels.HomePage;assembly=WolvenKit.App"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:others="clr-namespace:WolvenKit.Views.Others"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DataContext="{d:DesignInstance Type=homepage:PluginsToolViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    x:TypeArguments="homepage:PluginsToolViewModel"
    Background="{StaticResource ContentBackgroundAlt3}"
    mc:Ignorable="d">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Height="85"
            Margin="25,0,5,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal">


            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Foreground="White"
                Text="Plugins" />

        </StackPanel>

        <!--  Separator  -->
        <Separator Grid.Row="1" />

        <!--  Buttons  -->
        <Grid Grid.Row="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="CheckButton"
                Grid.Column="0"
                Height="45"
                Margin="10,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial
                        Width="30"
                        Height="30"
                        Foreground="CadetBlue"
                        Kind="Sync" />
                    <TextBlock
                        Margin="5,0,10,0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        Text="Check for Updates" />
                </StackPanel>
            </Button>

        </Grid>

        <!--  Main grid  -->
        <ListBox
            x:Name="PluginList"
            Grid.Row="3"
            Margin="10"
            HorizontalContentAlignment="Stretch"
            d:ItemsSource="{d:SampleData ItemCount=5}"
            ItemsSource="{Binding _pluginService.Plugins, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding SelectedPlugin}">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid IsEnabled="{Binding IsEnabled}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>


                            <StackPanel Grid.Column="0">
                                <TextBlock FontSize="20" Text="{Binding Name}" />
                                <TextBlock
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding Version}" />
                                <TextBlock FontSize="14" Text="{Binding Description}" />
                            </StackPanel>

                            <Button
                                Grid.Column="1"
                                Width="50"
                                Height="50"
                                Margin="0"
                                Padding="1"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Command="{Binding InstallCommand}"
                                Visibility="{Binding IsNotInstalled, Converter={StaticResource boolToVisibilityConverter}}">
                                <iconPacks:PackIconMaterial
                                    Width="30"
                                    Height="30"
                                    Foreground="CadetBlue"
                                    Kind="Download" />
                            </Button>
                            <Button
                                Grid.Column="1"
                                Width="50"
                                Height="50"
                                Margin="0"
                                Padding="1"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Visibility="{Binding IsOpenEnabled, Converter={StaticResource boolToVisibilityConverter}}">
                                <iconPacks:PackIconMaterial
                                    Width="30"
                                    Height="30"
                                    Foreground="LawnGreen"
                                    Kind="Check" />
                            </Button>

                            <StackPanel Grid.Column="2" Margin="5">
                                <Button
                                    Width="110"
                                    Height="20"
                                    Margin="1"
                                    Padding="1"
                                    Command="{Binding InstallCommand}"
                                    Content="{Binding Label}" />
                                <Button
                                    Width="110"
                                    Height="20"
                                    Margin="1"
                                    Padding="1"
                                    Command="{Binding OpenCommand}"
                                    Content="Open"
                                    IsEnabled="{Binding IsOpenEnabled}" />
                                <Button
                                    Width="110"
                                    Height="20"
                                    Margin="1"
                                    Padding="1"
                                    Command="{Binding RemoveCommand}"
                                    Content="Remove"
                                    IsEnabled="{Binding IsOpenEnabled}" />
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="1">
                            <syncfusion:SfLinearProgressBar
                                x:Name="StatusBarProgressBar"
                                Height="10"
                                IsIndeterminate="{Binding IsIndeterminate}"
                                Progress="{Binding Progress}"
                                Visibility="{Binding IsBusy, Converter={StaticResource boolToVisibilityConverter}}" />
                        </Grid>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>


    </Grid>

</reactiveUi:ReactiveUserControl>
