<catel:UserControl
 x:Class="WolvenKit.Views.HomePage.Pages.WebsitePageView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:catel="http://schemas.catelproject.com"
 xmlns:hc="https://handyorg.github.io/handycontrol"
 xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
 >

    <Grid
     MinWidth="300"
     MinHeight="300"
     hc:ThemeManager.RequestedAccentColor="{DynamicResource MahApps.Brushes.Accent3}"
     Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
     >

        <Grid Margin="3,75,3,0">

                <wv2:WebView2 x:Name="cal" Source="https://redmodding.org/" />
        </Grid>

            <StackPanel
             Margin="5"
             HorizontalAlignment="Right"
             VerticalAlignment="Top"
             Orientation="Horizontal"
             >
                <TextBlock
                 Margin="0"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center "
                 FontSize="20"
                 />
                <hc:Divider
                 Height="45"
                 Margin="15"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Orientation="Vertical"
                 />
                <hc:AnimationPath
                 Width="45"
                 Height="45"
                 Data="{DynamicResource WikiGeo}"
                 PathLength="250"
                 RenderTransformOrigin="0.5,0.5"
                 Stretch="Uniform"
                 Stroke="{DynamicResource MahApps.Brushes.ThemeForeground}"
                 StrokeThickness="1.5"
                 Duration="00:00:08"
                 >
                    <hc:AnimationPath.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform />
                            <SkewTransform />
                            <RotateTransform Angle="180" />
                            <TranslateTransform />
                        </TransformGroup>
                    </hc:AnimationPath.RenderTransform>
                </hc:AnimationPath>
            </StackPanel>


            <hc:ComboBox
             x:Name="SelectWebsiteTypeCombo"
             Height="45"
             Margin="0,20,75,0"
             HorizontalAlignment="Right"
             VerticalAlignment="Top"
             HorizontalContentAlignment="Right"
             Background="Transparent"
             FontSize="20"
             SelectedIndex="0"
             Visibility="Visible"
             >
                <ComboBoxItem Content="Organization Website" />
            </hc:ComboBox>
    </Grid>
</catel:UserControl>
