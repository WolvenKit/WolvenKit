<catel:UserControl
 x:Class="WolvenKit.Views.HomePage.Pages.SettingsPageView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:catel="http://schemas.catelproject.com"
 xmlns:hc="https://handyorg.github.io/handycontrol"
 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
 xmlns:sp="clr-namespace:WolvenKit.Views.HomePage.Pages"
 xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
 >

    <Grid
     MinWidth="300"
     MinHeight="300"
     hc:ThemeManager.RequestedAccentColor="{DynamicResource MahApps.Brushes.Accent3}"
     Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
     >
        <Grid Margin="3,75,3,0">
            <hc:TransitioningContentControl TransitionMode="Right2LeftWithFade">

                <hc:TabControl
                 x:Name="TabControlDemo"
                 Margin="0,0,0,0"
                 IsAnimationEnabled="True"
                 IsDraggable="False"
                 IsTabFillEnabled="True"
                 SelectionChanged="TabControlDemo_SelectionChanged"
                 ShowCloseButton="False"
                 >
                    <hc:TabItem x:Name="GeneralTabItem" IsSelected="True">
                        <hc:TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconCodicons Kind="VM" />
                                <TextBlock Margin="10,0,0,0" Text="General" />
                            </StackPanel>
                        </hc:TabItem.Header>
                        <sp:GeneralSettingsView />
                    </hc:TabItem>

                    <hc:TabItem x:Name="ToolsTabItems" IsSelected="True">
                        <hc:TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconCodicons Kind="Code" />
                                <TextBlock Margin="10,0,0,0" Text="Tools" />
                            </StackPanel>
                        </hc:TabItem.Header>
                        <sp:ToolSettingsView />
                    </hc:TabItem>
                    <hc:TabItem x:Name="EditorTabItem" IsSelected="True">
                        <hc:TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconCodicons Kind="Code" />
                                <TextBlock Margin="10,0,0,0" Text="Editor" />
                            </StackPanel>
                        </hc:TabItem.Header>
                        <sp:EditorSettingsView />
                    </hc:TabItem>
                    <hc:TabItem x:Name="PackagingTabItem" IsSelected="True">
                        <hc:TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconCodicons Kind="Code" />
                                <TextBlock Margin="10,0,0,0" Text="Packaging" />
                            </StackPanel>
                        </hc:TabItem.Header>
                        <sp:PackagingSettingsView />
                    </hc:TabItem>
                    <hc:TabItem x:Name="IntegrationsTabItem" IsSelected="True">
                        <hc:TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconCodicons Kind="Code" />
                                <TextBlock Margin="10,0,0,0" Text="Integrations" />
                            </StackPanel>
                        </hc:TabItem.Header>
                        <sp:IntegrationsSettingsView />
                    </hc:TabItem>
                </hc:TabControl>
            </hc:TransitioningContentControl>

            <!--
                desktop notif
                language
                account
                nexus account
                prio account
                auto update
                auto update "channel"
                theme
                create theme
                log path
                view logs
                Open mode for all tools
                Auto install mods
                project auto saving
                Default Project Folder
                exec path
                mat depo path

                tw3 exec path
                modkit path
                uncooked depo path
            -->


            <syncfusion:SfAccordion
             x:Name="SfAccordion"
             VerticalAlignment="Stretch"
             Background="{DynamicResource RegionBrush}"
             Visibility="Visible"
             >

                <syncfusion:SfAccordionItem Header="General">
                    <syncfusion:PropertyGrid
                     x:Name="GeneralSettingsPG"
                     CategoryForeground="{DynamicResource MahApps.Brushes.Accent}"
                     SelectedObject="{Binding generalSettingsPGModel}"
                     SortDirection="{x:Null}"
                     />
                </syncfusion:SfAccordionItem>

                <syncfusion:SfAccordionItem Header="Editor">
                    <syncfusion:PropertyGrid x:Name="EditorSettingsPG" SelectedObject="{Binding demomodel}" />
                </syncfusion:SfAccordionItem>

                <syncfusion:SfAccordionItem Header="Tools">
                    <syncfusion:PropertyGrid x:Name="ToolsSettingsPG" SelectedObject="{Binding demomodel}" />
                </syncfusion:SfAccordionItem>

                <syncfusion:SfAccordionItem Header="Cyberpunk 2077">
                    <syncfusion:PropertyGrid x:Name="CP77SettingsPG" SelectedObject="{Binding cp77SettingsPGModel}" />
                </syncfusion:SfAccordionItem>

                <syncfusion:SfAccordionItem Header="The Witcher 3">
                    <syncfusion:PropertyGrid x:Name="TW3SettingsPG" SelectedObject="{Binding tw3SettingsPGModel}" />
                </syncfusion:SfAccordionItem>

            </syncfusion:SfAccordion>
        </Grid>
        <hc:TransitioningContentControl TransitionMode="Right2LeftWithFade">

            <StackPanel
             Margin="5"
             HorizontalAlignment="Right"
             VerticalAlignment="Top"
             Orientation="Horizontal"
             >

                <TextBlock
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center "
                 FontSize="20"
                 Text="Settings"
                 />
                <hc:Divider
                 Height="45"
                 Margin="15"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Orientation="Vertical"
                 />
                <hc:AnimationPath
                 Width="45"
                 Height="45"
                 Margin="5"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Data="{DynamicResource SettingsGeo}"
                 PathLength="30"
                 Stretch="Uniform"
                 Stroke="{DynamicResource MahApps.Brushes.ThemeForeground}"
                 StrokeThickness="1.5"
                 Duration="00:00:06"
                 />
            </StackPanel>
        </hc:TransitioningContentControl>
    </Grid>
</catel:UserControl>
