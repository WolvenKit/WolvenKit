<reactiveUi:ReactiveUserControl
    x:TypeArguments="viewmodels:SettingsPageViewModel"
    x:Class="WolvenKit.Views.HomePage.Pages.SettingsPageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:sp="clr-namespace:WolvenKit.Views.HomePage.Pages"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:viewmodels="clr-namespace:WolvenKit.ViewModels">
   
    <Grid MinWidth="300" MinHeight="300">

        <Grid.Resources>
            <Style TargetType="CheckBox">
                <Setter Property="HorizontalAlignment" Value="Left" />
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <syncfusion:PropertyGrid
            x:Name="SettingsPropertygrid" Grid.Row="0"  Margin="0,85,0,0"
            AutoGeneratingPropertyGridItem="SettingsPropertygrid_OnAutoGeneratingPropertyGridItem"
            CategoryForeground="{DynamicResource MahApps.Brushes.Accent}"
            EnableGrouping="True"
            BorderThickness="0"
            SearchBoxVisibility="Collapsed"
            ButtonPanelVisibility="Collapsed"
            PropertyNameColumnDefinition="200" />

        <Grid Grid.Row="1" Background="{StaticResource ContentBackgroundAlt2}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="5" HorizontalAlignment="Right" Orientation="Horizontal" >
                <Button x:Name="CheckForUpdatesButton" Content="Check for updates" />
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="5" HorizontalAlignment="Right" Orientation="Horizontal" >
                <TextBlock Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"
                        Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
                        Text="Theme changes will take affect after restart." />
                <Button x:Name="ExitRestart" Click="ExitRestart_Click" Content="Exit and restart" />

            </StackPanel>
        </Grid>


        <StackPanel
            Margin="25,0,5,0"
            Height="85"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            >

            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center "
                FontSize="20"
                Text="Settings"
                />
            <hc:Divider
                Height="50"
                Margin="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical"
                />
            <hc:AnimationPath
                Width="45"
                Height="45"
                Data="{DynamicResource SettingsGeo}"
                PathLength="250"
                RenderTransformOrigin="0.5,0.5"
                Stretch="Uniform"
                Stroke="{DynamicResource MahApps.Brushes.ThemeForeground}"
                StrokeThickness="1.5"
                Duration="00:00:08"
                >
                <hc:AnimationPath.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform />
                        <SkewTransform />
                        <RotateTransform Angle="180" />
                        <TranslateTransform />
                    </TransformGroup>
                </hc:AnimationPath.RenderTransform>
            </hc:AnimationPath>
        </StackPanel>

    </Grid>
</reactiveUi:ReactiveUserControl>
