<reactiveUi:ReactiveUserControl
    x:Class="WolvenKit.Views.HomePage.HomePageView"
    x:TypeArguments="homePage:HomePageViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:homePage="clr-namespace:WolvenKit.App.ViewModels.HomePage;assembly=WolvenKit.App"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:WolvenKit.Views.HomePage.Pages"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:templates="clr-namespace:WolvenKit.Views.Templates"
    mc:Ignorable="av"
    d:DataContext="{d:DesignInstance Type=homePage:HomePageViewModel}"
    d:DesignWidth="1280"
    d:DesignHeight="720"
    MinWidth="960"
    Background="{DynamicResource ContentBackgroundAlt2}"
    BorderBrush="{StaticResource ContentBackgroundAlt4}"
    BorderThickness="1"
    MouseLeftButtonDown="Grid_MouseLeftButtonDown_1">
    <Grid hc:ThemeManager.RequestedAccentColor="{DynamicResource MahApps.Brushes.Accent3}">
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <hc:ThemeResources RequestedTheme="Dark" />
                    <hc:Theme />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="HomePageSideBar" Width="{DynamicResource WolvenKitHomeSideBarLength}" />
                <ColumnDefinition x:Name="HomePageContent" Width="5*" />
            </Grid.ColumnDefinitions>
        </Grid>

        <!-- Bottom Left Sidebar Grid -->
        <Grid
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            ZIndex="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!-- Left Bottom Button -->
            <Button
                x:Name="ToEditorButton"
                Grid.Row="0"
                Margin="4,4,4,30"
                Padding="0"
                HorizontalAlignment="Stretch"
                Background="{StaticResource ContentBackgroundAlt}"
                BorderThickness="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Width="{DynamicResource WolvenKitHomeButtonWidth}"
                        Padding="{DynamicResource WolvenKitMarginLeft}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="White"
                        FontSize="{DynamicResource WolvenKitFontBody}"
                        Text="Continue to editor" />

                    <iconPacks:PackIconCodicons
                        Grid.Column="1"
                        Kind="ArrowRight"
                        Width="{DynamicResource WolvenKitIconBig}"
                        Height="{DynamicResource WolvenKitIconBig}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center" />
                </Grid>
            </Button>

            <!-- Left Bottom Version Number -->
            <StackPanel
                Grid.Row="1"
                Margin="{DynamicResource WolvenKitHomeVersionMargin}"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <TextBlock
                    Margin="{DynamicResource WolvenKitHomeVersionMargin}"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource WolvenKitRed}"
                    FontSize="{DynamicResource WolvenKitFontBody}"
                    IsEnabled="False"
                    FlowDirection="LeftToRight"
                    Text="{Binding VersionNumber}" />

                <templates:IconBox
                    IconPack="Codicons"
                    Kind="Versions"
                    Size="{DynamicResource WolvenKitIcon}"
                    Foreground="{StaticResource WolvenKitRed}" />

                <Button
                    x:Name="CheckForUpdateButton"
                    Margin="{DynamicResource WolvenKitHomeVersionMargin}"
                    Padding="0"
                    Background="Transparent"
                    BorderThickness="0">
                    <Grid>
                        <templates:IconBox
                            IconPack="Material"
                            Kind="Update"
                            Margin="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Size="{DynamicResource WolvenKitIconMilli}"
                            Foreground="{StaticResource WolvenKitRed}" />
                    </Grid>
                </Button>

            </StackPanel>
        </Grid>

        <!-- Left Navigation -->
        <TabControl
            x:Name="HomeTabs"
            Margin="0"
            TabStripPlacement="Left">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="Transparent" />

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Border
                                    x:Name="Border"
                                    Margin="{DynamicResource WolvenKitMarginSmallLeft}"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="3,0,0,0">
                                    <ContentPresenter
                                        x:Name="ContentSite"
                                        Width="{DynamicResource WolvenKitHomeButtonWidth}"
                                        Height="{DynamicResource WolvenKitHomeButtonHeight}"
                                        Margin="{DynamicResource WolvenKitMarginSmallLeft}"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        ContentSource="Header"
                                        RecognizesAccessKey="True" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource ContentBackgroundAlt2}" />
                            <Setter Property="BorderBrush" Value="{StaticResource WolvenKitRed}" />
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ContentBackgroundAlt3}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TabControl.Resources>

            <TabControl.Style>
                <Style TargetType="{x:Type TabControl}">
                    <Setter Property="OverridesDefaultStyle" Value="True" />
                    <Setter Property="SnapsToDevicePixels" Value="True" />

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabControl}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="{Binding Width, ElementName=HomePageSideBar}" />
                                        <ColumnDefinition Width="{Binding Width, ElementName=HomePageContent}" />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="3*" />
                                    </Grid.RowDefinitions>

                                    <Border
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Background="{StaticResource ContentBackgroundAlt}" />

                                    <Border
                                        Grid.Row="0"
                                        Grid.Column="0">
                                        <Border.OpacityMask>
                                            <ImageBrush
                                                ImageSource="/Resources/Media/Images/Application/Sammy_Home.png"
                                                Stretch="Uniform" />
                                        </Border.OpacityMask>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="4*" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="4*" />
                                                <RowDefinition Height="1*" />
                                            </Grid.RowDefinitions>

                                            <Image
                                                x:Name="LogoNavi"
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Source="pack://application:,,,/Resources/Media/Images/Application/Sammy_Home.png" />

                                            <Button
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Width="Auto"
                                                Height="Auto"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Stretch"
                                                Background="{DynamicResource TransparentWhiteBrush}"
                                                BorderBrush="{DynamicResource TransparentWhiteBrush}"
                                                Foreground="{DynamicResource TransparentWhiteBrush}"
                                                Style="{DynamicResource HeaderButtonStyle}"
                                                Command="{Binding CloseHomePageCommand}"
                                                IsCancel="True"
                                                Opacity=".15" />
                                        </Grid>
                                    </Border>

                                    <Border
                                        x:Name="Border"
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        BorderThickness="0">
                                        <ContentPresenter
                                            x:Name="PART_SelectedContentHost"
                                            Margin="0"
                                            ContentSource="SelectedContent" />
                                    </Border>

                                    <Grid
                                        Grid.Row="1"
                                        Grid.Column="0">
                                        <TabPanel
                                            x:Name="HeaderPanel"
                                            HorizontalAlignment="Stretch"
                                            Panel.ZIndex="1"
                                            Background="Transparent"
                                            IsItemsHost="True" />
                                    </Grid>
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Style>

            <TabItem Name="WelcomePageTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <templates:IconBox
                            IconPack="Codicons"
                            Kind="Home"
                            Margin="0"
                            Size="{DynamicResource WolvenKitIcon}"
                            Foreground="White" />

                        <TextBlock
                            Margin="{DynamicResource WolvenKitMarginSmallLeft}"
                            VerticalAlignment="Center"
                            FontSize="{DynamicResource WolvenKitFontMedium}"
                            Text="Welcome" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <pages:WelcomePageView x:Name="WlcmPage" />
                </TabItem.Content>
            </TabItem>

            <TabItem
                Name="ModsPageTab"
                Selector.Selected="ModsPageTab_Selected">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <templates:IconBox
                            IconPack="Codicons"
                            Kind="Package"
                            Margin="0"
                            Size="{DynamicResource WolvenKitIcon}"
                            Foreground="White" />

                        <TextBlock
                            Margin="{DynamicResource WolvenKitMarginSmallLeft}"
                            VerticalAlignment="Center"
                            FontSize="{DynamicResource WolvenKitFontMedium}"
                            Text="Mod Manager" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <pages:ModsView />
                </TabItem.Content>
            </TabItem>

            <TabItem Name="PluginsPageTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <templates:IconBox
                            IconPack="Codicons"
                            Kind="Extensions"
                            Margin="0"
                            Size="{DynamicResource WolvenKitIcon}"
                            Foreground="White" />

                        <TextBlock
                            Margin="{DynamicResource WolvenKitMarginSmallLeft}"
                            VerticalAlignment="Center"
                            FontSize="{DynamicResource WolvenKitFontMedium}"
                            Text="Plugins" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <pages:PluginsToolView />
                </TabItem.Content>
            </TabItem>

            <TabItem Name="SettingsPageTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <templates:IconBox
                            IconPack="Material"
                            Kind="Tune"
                            Margin="0"
                            Size="{DynamicResource WolvenKitIcon}"
                            Foreground="White" />

                        <TextBlock
                            Margin="{DynamicResource WolvenKitMarginSmallLeft}"
                            VerticalAlignment="Center"
                            FontSize="{DynamicResource WolvenKitFontMedium}"
                            Text="Settings" />
                    </StackPanel>
                </TabItem.Header>

                <TabItem.Content>
                    <pages:SettingsPageView />
                </TabItem.Content>
            </TabItem>
        </TabControl>
    </Grid>
</reactiveUi:ReactiveUserControl>
