<catel:UserControl x:Class="WolvenKit.Views.Tools.MenuTool.MenuCreatorToolView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com" xmlns:hc="https://handyorg.github.io/handycontrol">

    <catel:UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources/>
                <hc:Theme/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </catel:UserControl.Resources>


    <Grid Height="600" Width="900">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
            <ToolBar HorizontalAlignment="Left" VerticalAlignment="Top">
                <Button Content="File"/>
                <Separator/>
                <Button Content="Edit Main"/>
                <Separator/>
                <Button Content="Refresh"/>

            </ToolBar>


        <hc:CheckTreeView Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">


        </hc:CheckTreeView>


        <hc:PropertyGrid Grid.Column="1" Grid.Row="1">
            
        </hc:PropertyGrid>


    </Grid>

</catel:UserControl>
