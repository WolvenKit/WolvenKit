<reactiveUi:ReactiveUserControl
    x:TypeArguments="tools:AssetBrowserViewModel"
    x:Class="WolvenKit.Views.Tools.AssetBrowserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:converters1="clr-namespace:WolvenKit.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:local="clr-namespace:WolvenKit"
    xmlns:others="clr-namespace:WolvenKit.Views.Others"
    xmlns:tools="clr-namespace:WolvenKit.ViewModels.Tools;assembly=WolvenKit.App"
    d:DataContext="{d:DesignInstance Type=tools:AssetBrowserViewModel}"
    BorderBrush="Transparent"
    mc:Ignorable="d">


    <Grid>

        <Border
            hc:ThemeManager.RequestedAccentColor="{DynamicResource MahApps.Brushes.Accent3}"
            BorderBrush="{DynamicResource MahApps.Brushes.Accent4}"
            BorderThickness="0">
            <Grid>

                <Grid.Resources>
                    <Style x:Key="AB_FileIconStyle" TargetType="{x:Type others:FileIcon}">
                        <Style.Triggers>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Path=IsExpanded, RelativeSource={RelativeSource AncestorType={x:Type syncfusion:TreeGridExpanderCell}}}" Value="True" />
                                    <Condition Binding="{Binding Path=HasChildNodes, RelativeSource={RelativeSource AncestorType={x:Type syncfusion:TreeGridExpanderCell}}}" Value="True" />
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Type" Value="Open" />
                            </MultiDataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1"/>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Background="{StaticResource ContentBackgroundAlt2}" />

                <!-- Asset Browser Search -->
                <Grid Grid.Row="0" Margin="3,0,3,3">

                    <Grid.Resources>
                        <ResourceDictionary>
                            <ResourceDictionary.MergedDictionaries>
                                <hc:ThemeResources />
                                <hc:Theme />
                            </ResourceDictionary.MergedDictionaries>
                        </ResourceDictionary>
                    </Grid.Resources>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Click="LeftNavigationHomeButton_OnClick"
                        Visibility="Visible"
                        Style="{StaticResource ButtonDefault}">
                        <iconPacks:PackIconCodicons Kind="Home" />
                    </Button>
                    
                    <hc:SearchBar Grid.Column="1"
                                  x:Name="FileSearchBar"
                                  Style="{StaticResource SearchBarPlus}"
                                  VerticalAlignment="Top"
                                  FlowDirection="LeftToRight"
                                  ShowClearButton="False"
                                  hc:InfoElement.Placeholder="Search all game files: (e.g. judy kind:mesh,ent)"
                                  SearchStarted="FileSearchBar_SearchStarted"
                                  Margin="5,0,0,0"
                                  >
                    </hc:SearchBar>

                    <Viewbox Grid.Column="2"  Margin="-35,0,0,0" Height="30" Width="30" >
                        <ToggleButton IsChecked="{Binding IsRegexSearchEnabled}"
                                      ToolTip="Toggle Regex">

                            <ToggleButton.Style>
                                <Style TargetType="ToggleButton" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                    <Style.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Background" Value="{StaticResource WolvenKitRed}" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </ToggleButton.Style>

                            <iconPacks:PackIconCodicons Kind="Regex" />
                            
                        </ToggleButton>
                    </Viewbox>
                    
                    <hc:SearchBar  Grid.Column="3" Margin="10,0,0,0"
                                  x:Name="OptionsSearchBar"
                                  Style="{StaticResource SearchBarPlus}"
                                  VerticalAlignment="Top"
                                  FlowDirection="LeftToRight"
                                  ShowClearButton="True"
                                  hc:InfoElement.Placeholder="(e.g. *.ent, base/**/judy)"
                                  hc:InfoElement.Title="Files to include: "
                                  hc:InfoElement.TitlePlacement="Left"
                                  SearchStarted="FileSearchBar_SearchStarted"
                                  >
                       
                    </hc:SearchBar>

                </Grid>

                <syncfusion:Splitter Background="{DynamicResource MahApps.Brushes.Gray.SemiTransparent}" Grid.Row="1"/>

                <!-- Asset Browser  -->
                <Grid Grid.Row="2">
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="200"/>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Left Navigation -->
                    <Grid Grid.Column="0" Margin="0">

                        <Grid.Resources>
                            <converters1:ExtensionToImageConverter x:Key="ExtensionToImageConverter" />
                            <DataTemplate x:Key="TemplateToolTip">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="1" Text="{Binding FullName}" HorizontalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </Grid.Resources>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Search Bar -->
                        <Grid Grid.Row="0">
                        </Grid>

                        <!--Folder Tree -->
                        <!-- RequestTreeItems="LeftNavigation_RequestTreeItems" -->
                        <syncfusion:SfTreeGrid
                            Grid.Row="1"
                            Margin="0"
                            BorderThickness="0"
                            x:Name="LeftNavigation"
                            AllowFiltering="False"
                            AllowSorting="False"
                            AllowTriStateSorting="False"
                            AutoExpandMode="RootNodesExpanded"
                            AutoGenerateColumns="False"
                            ChildPropertyName="RedFileSystemModels"
                            ColumnSizer="Star"
                            FilterLevel="All"
                            RowHeight="19"
                            CurrentCellBorderThickness="0"
                            SelectionChanged="LeftNavigation_OnSelectionChanged"
                            ExpandStateMappingName="IsExpanded"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                            HeaderRowHeight="3">

                            <syncfusion:SfTreeGrid.Resources>
                                <Style TargetType="syncfusion:TreeGridCell">
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                </Style>
                                <Style TargetType="syncfusion:TreeGridExpanderCell">
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                </Style>
                                <Style TargetType="Grid">
                                    <Style.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </Style>
                                    </Style.Resources>
                                </Style>

                                <Style TargetType="syncfusion:TreeGridHeaderRowControl">
                                    <Setter Property="Margin" Value="0,0,0,3" />
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                </Style>

                            </syncfusion:SfTreeGrid.Resources>

                            <syncfusion:SfTreeGrid.Columns>

                                <syncfusion:TreeGridTextColumn
                                    HorizontalHeaderContentAlignment="Left"
                                    ImmediateUpdateColumnFilter="True"
                                    MappingName="Name"
                                    ShowToolTip="True"
                                    ColumnSizer="Star"
                                    ToolTipTemplate="{StaticResource TemplateToolTip}"
                                    HeaderText="">
                                    
                                    <syncfusion:TreeGridTextColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="13" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <others:FileIcon Height="13" Width="Auto" Icon="{Binding Extension}" Style="{StaticResource AB_FileIconStyle}" />
                                                <TextBlock
                                                        x:Name="TemplateTextBlock"
                                                        Grid.Column="1"
                                                        Margin="5,0,0,2"
                                                        VerticalAlignment="Center"
                                                        Text="{Binding Path=Name}" />
                                            </Grid>
                                        </DataTemplate>
                                    </syncfusion:TreeGridTextColumn.CellTemplate>
                                    
                                </syncfusion:TreeGridTextColumn>
                            </syncfusion:SfTreeGrid.Columns>

                            <syncfusion:SfTreeGrid.ExpanderContextMenu>
                                <ContextMenu>
                                    <MenuItem Click="Expand_OnClick" Header="Expand" />
                                    <!--<MenuItem Click="ExpandAll_OnClick" Header="Expand all" />-->
                                    <MenuItem Click="Collapse_OnClick" Header="Collapse" />
                                    <MenuItem Click="CollapseAll_OnClick" Header="Collapse all" />
                                </ContextMenu>
                            </syncfusion:SfTreeGrid.ExpanderContextMenu>

                        </syncfusion:SfTreeGrid>

                    </Grid>

                    <syncfusion:SfGridSplitter Grid.Column="1" HorizontalAlignment="Stretch" />

                    <!-- Right File List -->
                    <Grid Grid.Column="2" Margin="0">
                            
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <syncfusion:SfDataGrid
                                x:Name="InnerList"
                                AllowDeleting="False"
                                AllowDraggingColumns="False"
                                AllowDraggingRows="False"
                                AllowEditing="False"
                                AllowFiltering="True"
                                AllowResizingColumns="True"
                                AllowSorting="True"
                                AutoGenerateColumns="False"
                                Background="{StaticResource ContentBackground}"
                                CurrentCellBorderThickness="0"
                                ColumnSizer="Auto"
                                EnableDataVirtualization="True"
                                IsManipulationEnabled="False"
                                SelectionChanged="InnerList_SelectionChanged"
                                SelectionMode="Extended"
                                MouseDoubleClick="InnerList_MouseDoubleClick"
                                BorderThickness="0"
                                RowHeight="19"
                                >

                                <syncfusion:SfDataGrid.RecordContextMenu>
                                <ContextMenu>
                                    <MenuItem x:Name="OpenFileOnly" Header="Open without adding to project" />
                                    <MenuItem x:Name="AddSelected" Header="Add selected items to project" />
                                        <Separator/>
                                        <MenuItem Header="Video">
                                            <MenuItem
                                                x:Name="VidPreviewMenuItem"
                                                Click="VidPreviewMenuItem_Click"
                                                Header="Preview BK2" />
                                            <MenuItem
                                                x:Name="BKExport"
                                                Click="BKExport_Click"
                                                Header="Export BK2 to Avi"
                                                Visibility="Collapsed"/>
                                        </MenuItem>
                                    <Separator/>
                                    <MenuItem Header="Find files using this" x:Name="RightContextMenuFindUsingMenuItem" />
                                    <MenuItem Header="Copy Relative Path" x:Name="RightContextMenuCopyPathMenuItem" />
                                </ContextMenu>
                                </syncfusion:SfDataGrid.RecordContextMenu>

                                <syncfusion:SfDataGrid.Resources>
                                    
                                    <Style TargetType="syncfusion:GridHeaderCellControl">
                                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                                    <Setter Property="BorderBrush" Value="{DynamicResource SecondaryRegionBrush}" />
                                    <Setter Property="Margin" Value="0,0,0,3" />
                                </Style>
                                <Style TargetType="syncfusion:GridCell">
                                    <Setter Property="BorderThickness" Value="0,0,0,0" />
                                    <Setter Property="Padding" Value="0,0,0,2" />
                                </Style>

                                    <converters1:ExtensionToBitmapConverter x:Key="ExtensionToBmp" />

                                <DataTemplate x:Key="TemplateToolTip">
                                    <TextBlock Text="{Binding FullName}" />
                                </DataTemplate>

                            </syncfusion:SfDataGrid.Resources>

                                <syncfusion:SfDataGrid.Columns>

                                    <syncfusion:GridCheckBoxColumn
                                        AllowEditing="True"
                                        AllowFiltering="False"
                                        AllowResizing="False"
                                        Width="32"
                                        HeaderText="#"
                                        MappingName="IsChecked">
                                        <syncfusion:GridCheckBoxColumn.HeaderTemplate>
                                            <DataTemplate>
                                            <CheckBox
                                                Command="local:SFDataGridCommands.CheckAndUnCheck"
                                                CommandParameter="{Binding ElementName=InnerList}"
                                                />
                                            </DataTemplate>
                                        </syncfusion:GridCheckBoxColumn.HeaderTemplate>
                                    </syncfusion:GridCheckBoxColumn>

                                    <syncfusion:GridTemplateColumn
                                        Width="13"
                                        AllowResizing="False"
                                        AllowFiltering="False"
                                        MappingName="">
                                    <syncfusion:GridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <others:FileIcon Height="13" Width="Auto" Icon="{Binding Extension}" />
                                        </DataTemplate>
                                        </syncfusion:GridTemplateColumn.CellTemplate>
                                    </syncfusion:GridTemplateColumn>

                                    <syncfusion:GridTextColumn
                                        Padding="4,0,0,0"
                                        AllowFiltering="True"
                                        ColumnSizer="AutoWithLastColumnFill"
                                        IsReadOnly="True"
                                        MappingName="Name"
                                        AllowResizing="False"
                                        HorizontalHeaderContentAlignment="Left"
                                        HeaderText="File Name"
                                        ShowToolTip="True" ToolTipTemplate="{StaticResource TemplateToolTip}"
                                        />

                                <syncfusion:GridTextColumn
                                        AllowFiltering="True"
                                        AllowResizing="False"
                                        HeaderText="Kind"
                                        ColumnSizer="Auto"
                                        IsReadOnly="True"
                                        HorizontalHeaderContentAlignment="Left"
                                        MappingName="DisplayExtension" />

                                <syncfusion:GridTextColumn
                                        AllowFiltering="True"
                                        AllowResizing="False"
                                        ColumnSizer="Auto"
                                        IsReadOnly="True"
                                        HorizontalHeaderContentAlignment="Left"
                                        AllowSorting="True"
                                        SortMode="Value"
                                        DisplayBinding="{Binding SizeString}"
                                        HeaderText="Size"
                                        MappingName="Size"
                                        ValueBinding="{Binding Size}" />

                            </syncfusion:SfDataGrid.Columns>

                                

                                <hc:Interaction.Triggers>
                                    <hc:EventTrigger EventName="MouseDoubleClick">
                                    <hc:EventToCommand Command="{Binding OpenFileSystemItemCommand}" />
                                    </hc:EventTrigger>
                                </hc:Interaction.Triggers>

                            </syncfusion:SfDataGrid>

                            <!--<syncfusion:SfDataPager
                                x:Name="dataPager"
                                Grid.Row="1"
                                PageCount="5"
                                PageSize="100"
                                UseOnDemandPaging="True"
                                OnDemandLoading="dataPager_OnDemandLoading"
                                />-->
                    </Grid>

                </Grid>
                
            </Grid>
        </Border>
        
        <Border
            x:Name="LoadingBorder"
            Grid.RowSpan="3"
            Background="{StaticResource ContentBackgroundAlt3}"
            BorderBrush="Black"
            BorderThickness="0"
            Visibility="{Binding Path=LoadVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
            <Grid>
                <syncfusion:SfBusyIndicator
                    AnimationType="Ball" Foreground="{DynamicResource MahApps.Brushes.Accent}"
                    Visibility="{Binding Path=LoadVisibility, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,75,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="#7EFFFFFF"
                        Text="Loading Asset Browser..."
                        TextWrapping="Wrap" />
                </StackPanel>
            </Grid>
        </Border>

        <Border
            x:Name="NoProjectBorder"
            Grid.RowSpan="3"
            Background="{StaticResource ContentBackgroundAlt2}"
            Visibility="{Binding Path=ShouldShowLoadButton, Mode=OneWay, Converter={StaticResource Boolean2VisibilityConverter}}">
            <Grid>
                <StackPanel VerticalAlignment="Center">
                    <Button HorizontalAlignment="Center" Command="{Binding LoadAssetBrowserCommand}">
                        <TextBlock Text="Load Asset Browser" FontSize="16" Margin="20,10"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
        
    </Grid>
</reactiveUi:ReactiveUserControl>
