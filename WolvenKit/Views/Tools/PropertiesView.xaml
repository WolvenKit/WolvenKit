                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:PackIconCodicons Kind="OpenPreview" Height="14" VerticalAlignment="Center"/>
                                        <TextBlock Text="Open Folder in Explorer" FontSize="10.5"/>
