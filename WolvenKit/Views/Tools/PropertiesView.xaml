                                    BorderThickness="1,0,0,0"
                                    IsReadOnly="True"
                                    Text="{Binding PE_SelectedItem.HashStr, Mode=OneWay}" />
                            </Grid>
                            <TextBox IsReadOnly="True" Text="{Binding PE_SelectedItem.RelativePath, Mode=OneWay}" />
                        </StackPanel>
