<reactiveUi:ReactiveUserControl
    x:TypeArguments="tools:VisualEditorViewModel"
 x:Class="WolvenKit.Views.Documents.VisualEditorView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:reactiveUi="http://reactiveui.net"
 xmlns:hc="https://handyorg.github.io/handycontrol"
 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
 xmlns:nodenetwork="clr-namespace:NodeNetwork.Views;assembly=NodeNetwork"
    xmlns:tools="clr-namespace:WolvenKit.ViewModels.Tools;assembly=WolvenKit.App"
 BorderBrush="{x:Null}"
 >

   

    <Border
     hc:ThemeManager.RequestedAccentColor="{DynamicResource MahApps.Brushes.Accent3}"
     BorderBrush="{DynamicResource MahApps.Brushes.Accent4}"
     BorderThickness="1"
     >
        <Grid Background="{DynamicResource Fluent.Ribbon.Brushes.Backstage.Background}">

            <Grid.Resources>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <hc:ThemeResources />
                        <hc:Theme />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </Grid.Resources>

            <hc:TabControl>
                <hc:TabItem Header="Quest Editor">
                    <Grid>

                        <Grid>

                            <Menu Margin="0,0,0,0" Background="{DynamicResource Fluent.Ribbon.Brushes.Backstage.Background}">
                                <MenuItem Header="File" />
                                <MenuItem Header="Edit" />
                                <MenuItem Header="View" />
                                <MenuItem Header="Compile" />
                            </Menu>



                        </Grid>

                    </Grid>
                </hc:TabItem>

                <hc:TabItem Header="Scene Editor">
                    <TextBlock
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Text="Coming Soon"
                     />
                </hc:TabItem>
            </hc:TabControl>


            <hc:AnimationPath
             Width="66"
             Height="66"
             Margin="0,80,10,0"
             HorizontalAlignment="Right"
             VerticalAlignment="Top"
             Data="{StaticResource Try}"
             PathLength="400"
             Stretch="Uniform"
             Stroke="{DynamicResource MahApps.Brushes.Accent2}"
             StrokeThickness="0.7"
             Duration="0:0:16"
             />


            <Grid Background="{DynamicResource ContentBackgroundAlt2}">


                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="5" />

                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="5" />

                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>




                <Grid
                 Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="5"
                 >
                    <Expander
                     Grid.Column="0"
                     VerticalAlignment="Bottom"
                     Background="{DynamicResource ContentBackgroundAlt}"
                     BorderBrush="{DynamicResource MahApps.Brushes.Accent3}"
                     BorderThickness="1"
                     ExpandDirection="Up"
                     Header="Node Menu"
                     IsExpanded="True"
                     >
                        <Border BorderBrush="{DynamicResource MahApps.Brushes.Accent3}" BorderThickness="1,1,1,0">

                            <Grid
                             Height="150"
                             VerticalAlignment="Bottom"
                             Background="{DynamicResource ContentBackgroundAlt2}"
                             />
                        </Border>

                    </Expander>
                </Grid>

                <Border
                 Grid.Column="0"
                 Background="{DynamicResource ContentBackgroundAlt}"
                 BorderBrush="{DynamicResource MahApps.Brushes.Accent4}"
                 BorderThickness="1"
                 />
                <Border Grid.Column="1" Background="{DynamicResource ContentBackgroundAlt}">











                    <Grid Grid.Row="1">

                        <StackPanel Margin="0,0,0,0" VerticalAlignment="Bottom">
                            <hc:Divider Margin="0" />

                            <Button
                             Height="40"
                             Background="{DynamicResource ContentBackgroundAlt}"
                             Style="{DynamicResource MahApps.Styles.Button.ToolBar}"
                             >
                                <iconPacks:PackIconMaterial
                                 Width="auto"
                                 Height="auto"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Kind="ContentSave"
                                 ToolTip="Save Graph"
                                 />
                            </Button>
                            <Button
                             Height="40"
                             Background="{DynamicResource ContentBackgroundAlt}"
                             Style="{DynamicResource MahApps.Styles.Button.ToolBar}"
                             >
                                <iconPacks:PackIconMaterial
                                 Width="auto"
                                 Height="auto"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Kind="UndoVariant"
                                 ToolTip="Reset Graph"
                                 />
                            </Button>

                            <hc:Divider Margin="0" />
                        </StackPanel>


                        <StackPanel Margin="0,0,0,0" VerticalAlignment="Top">
                            <hc:Divider Margin="0" />

                            <Button
                             Height="40"
                             Background="{DynamicResource ContentBackgroundAlt}"
                             Style="{DynamicResource MahApps.Styles.Button.ToolBar}"
                             >
                                <iconPacks:PackIconMaterial
                                 Width="auto"
                                 Height="auto"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Kind="Pencil"
                                 ToolTip="Edit Node"
                                 />
                            </Button>

                            <Button
                             Height="40"
                             Background="{DynamicResource ContentBackgroundAlt}"
                             Style="{DynamicResource MahApps.Styles.Button.ToolBar}"
                             >
                                <iconPacks:PackIconMaterial
                                 Width="auto"
                                 Height="auto"
                                 Margin="0,0,0,0"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Kind="ContentPaste"
                                 ToolTip="Paste"
                                 />
                            </Button>
                            <Button
                             Height="40"
                             Background="{DynamicResource ContentBackgroundAlt}"
                             Style="{DynamicResource MahApps.Styles.Button.ToolBar}"
                             >
                                <iconPacks:PackIconMaterial
                                 Width="auto"
                                 Height="auto"
                                 Margin="0,0,0,0"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Kind="ContentCopy"
                                 ToolTip="Copy"
                                 />
                            </Button>
                            <Button
                             Height="40"
                             Background="{DynamicResource ContentBackgroundAlt}"
                             Style="{DynamicResource MahApps.Styles.Button.ToolBar}"
                             >
                                <iconPacks:PackIconMaterial
                                 Width="auto"
                                 Height="auto"
                                 Margin="0,0,0,0"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Kind="ContentCut"
                                 ToolTip="Cut"
                                 />
                            </Button>
                            <Button
                             Height="40"
                             VerticalAlignment="Bottom"
                             Background="{DynamicResource ContentBackgroundAlt}"
                             Style="{DynamicResource MahApps.Styles.Button.ToolBar}"
                             >
                                <iconPacks:PackIconMaterial
                                 Width="auto"
                                 Height="auto"
                                 Margin="0,0,0,0"
                                 VerticalAlignment="Center"
                                 BorderThickness="0"
                                 Kind="Delete"
                                 ToolTip="Cancel"
                                 />
                            </Button>
                            <hc:Divider Margin="0" />

                        </StackPanel>



                    </Grid>



                </Border>


                <Border
                 Grid.Column="2"
                 Background="{DynamicResource ContentBackgroundAlt}"
                 BorderBrush="{DynamicResource MahApps.Brushes.Accent4}"
                 BorderThickness="1"
                 />




                <Grid Grid.Column="3">
                    <nodenetwork:NetworkView
                     x:Name="networkView"
                     Grid.Row="2"
                     Margin="0"
                     Background="{DynamicResource ContentBackground}"
                     >

                        <nodenetwork:NetworkView.NetworkBackground>
                            <DrawingBrush
                             TileMode="Tile"
                             Viewbox="0,0,96,96"
                             ViewboxUnits="Absolute"
                             Viewport="0,0,96,96"
                             ViewportUnits="Absolute"
                             >
                                <DrawingBrush.Drawing>
