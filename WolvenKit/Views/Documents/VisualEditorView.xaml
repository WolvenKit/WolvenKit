                                        </GeometryDrawing.Geometry>
                                    </GeometryDrawing>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>
                        </nodenetwork:NetworkView.NetworkBackground>

                        <nodenetwork:NetworkView.ContextMenu>
                            <ContextMenu
                             Background="Transparent"
                             HorizontalOffset="75"
                             VerticalOffset="-75"
                             >
                                <ContextMenu.Template>
                                    <ControlTemplate>
                                        <Grid Width="150" Height="150">

                                            <Ellipse
                                             Width="25"
                                             Height="25"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Fill="{DynamicResource Fluent.Ribbon.Brushes.Backstage.Background}"
                                             Stroke="{DynamicResource MahApps.Brushes.Accent3}"
                                             StrokeThickness="5"
                                             />

                                            <Ellipse
                                             Width="100"
                                             Height="100"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Stroke="{DynamicResource MahApps.Brushes.Accent3}"
                                             StrokeThickness="5"
                                             />
                                            <Ellipse
                                             Width="100"
                                             Height="100"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Stroke="{DynamicResource Fluent.Ribbon.Brushes.Backstage.Background}"
                                             StrokeThickness="4"
                                             />
                                            <hc:CirclePanel
                                             Margin="0"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             Diameter="60"
                                             KeepVertical="False"
                                             >
                                                <Button
                                                 Margin="0"
                                                 Background="{x:Null}"
                                                 BorderBrush="{x:Null}"
                                                 Style="{DynamicResource CirclePanelButton}"
                                                 >
                                                    <iconPacks:PackIconBootstrapIcons Kind="NodePlus" />
                                                </Button>
                                                <Button
                                                 Margin="0"
                                                 Background="{x:Null}"
                                                 BorderBrush="{x:Null}"
                                                 Style="{DynamicResource CirclePanelButton}"
                                                 >
                                                    <iconPacks:PackIconBootstrapIcons Kind="NodePlus" />
                                                </Button>
                                                <Button
                                                 Margin="0"
                                                 Background="{x:Null}"
                                                 BorderBrush="{x:Null}"
                                                 Style="{DynamicResource CirclePanelButton}"
                                                 >
                                                    <iconPacks:PackIconBootstrapIcons Kind="NodePlus" />
                                                </Button>
                                                <Button
                                                 Margin="0"
                                                 Background="{x:Null}"
                                                 BorderBrush="{x:Null}"
                                                 Style="{DynamicResource CirclePanelButton}"
                                                 >
                                                    <iconPacks:PackIconBootstrapIcons Kind="NodePlus" />
                                                </Button>
                                                <Button
                                                 Margin="0"
                                                 Background="{x:Null}"
                                                 BorderBrush="{x:Null}"
                                                 Style="{DynamicResource CirclePanelButton}"
                                                 >
                                                    <iconPacks:PackIconBootstrapIcons Kind="NodePlus" />
                                                </Button>
                                            </hc:CirclePanel>
                                        </Grid>
                                    </ControlTemplate>
                                </ContextMenu.Template>
                            </ContextMenu>
                        </nodenetwork:NetworkView.ContextMenu>
                    </nodenetwork:NetworkView>
                </Grid>
                <Border
                 Grid.Column="4"
                 Background="{DynamicResource ContentBackgroundAlt}"
                 BorderBrush="{DynamicResource MahApps.Brushes.Accent4}"
                 BorderThickness="1"
                 />

            </Grid>

        </Grid>
    </Border>
</reactiveUi:ReactiveUserControl>
