<UserControl
    x:Class="WolvenKit.Views.Controls.ValidationTextBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch">
    <UserControl.DataContext>
        <Binding RelativeSource="{RelativeSource Self}" />
    </UserControl.DataContext>
    <Grid>
        <TextBlock
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Text="{Binding Text}">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="{DynamicResource WolvenKitMarginTiny}" />
                    <Style.Triggers>
                        <DataTrigger
                            Binding="{Binding HasError}"
                            Value="true">
                            <Setter Property="Foreground" Value="{StaticResource WolvenKitRedPaleColor}" />
                        </DataTrigger>
                        <DataTrigger
                            Binding="{Binding HasError}"
                            Value="false">
                            <Setter Property="Foreground" Value="{StaticResource WolvenKitFrameColor}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>
