<reactiveUi:ReactiveUserControl
    x:Class="WolvenKit.Views.Dialogs.ProjectSettingsDialog"
    x:TypeArguments="dialogs:ProjectSettingsDialogViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:WolvenKit.App.ViewModels.Dialogs;assembly=WolvenKit.App"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:controls="clr-namespace:WolvenKit.Views.Others"
    mc:Ignorable="d"
    d:DesignWidth="640"
    d:DesignHeight="320"
    MinWidth="{DynamicResource WolvenKitDialogWidth}"
    MinHeight="{DynamicResource WolvenKitDialogHeight}"
    Background="{StaticResource ContentBackgroundAlt3}">
    <Grid Margin="{DynamicResource WolvenKitMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="{DynamicResource WolvenKitColumnTiny}" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <!-- Main Row -->
        <ListBox
            x:Name="MenuListBox"
            Grid.Row="0"
            Grid.Column="0"
            SelectedIndex="0">
            <ListBoxItem>General</ListBoxItem>
        </ListBox>

        <Grid
            Grid.Row="0"
            Grid.Column="2">
            <Grid.Resources>
                <Style TargetType="{x:Type Label}">
                    <Setter Property="VerticalAlignment" Value="Center" />
                </Style>
            </Grid.Resources>

            <!-- Settings panel - will be switched around by ListView -->
            <StackPanel x:Name="GeneralPanel">
                <Grid Margin="{DynamicResource WolvenKitMarginTinyBottom}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="8*" />
                        <ColumnDefinition Width="50" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="35" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0">Project Name</Label>
                    <hc:TextBox
                        x:Name="ProjectNameTextBox"
                        Grid.Row="0"
                        Grid.Column="1"
                        Background="{StaticResource BackgroundColor_Button_Active}"
                        IsReadOnly="True" />

                    <controls:ColorPickerButton
                        x:Name="ProjectColorButton"
                        Grid.Row="0"
                        Grid.Column="2"
                        Width="40"
                        Margin="{DynamicResource WolvenKitMarginTinyHorizontal}"
                        Color="{Binding ProjectColor}" />


                    <Label
                        Grid.Row="2"
                        Grid.Column="0">
                        Mod Name
                    </Label>
                    <hc:TextBox
                        x:Name="ModNameTextBox"
                        Grid.Row="2"
                        Grid.Column="1" />


                    <Label
                        Grid.Row="4"
                        Grid.Column="0">
                        Version
                    </Label>
                    <hc:TextBox
                        x:Name="VersionTextBox"
                        Grid.Row="4"
                        Grid.Column="1" />


                    <Label
                        Grid.Row="6"
                        Grid.Column="0">
                        Author
                    </Label>
                    <hc:TextBox
                        x:Name="AuthorTextBox"
                        Grid.Row="6"
                        Grid.Column="1" />

                    <!-- Mod author -->
                    <Label
                        Grid.Row="8"
                        Grid.Column="0">
                        Email
                    </Label>
                    <hc:TextBox
                        x:Name="EmailTextBox"
                        Grid.Row="8"
                        Grid.Column="1" />

                </Grid>
            </StackPanel>
        </Grid>

        <!-- Bottom Row -->
        <Grid
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="OkButton"
                Grid.Column="2"
                Padding="{DynamicResource WolvenKitMarginSmall}"
                HorizontalAlignment="Right"
                Background="{StaticResource WolvenKitRed}"
                Content="Save" />
            <Button
                x:Name="CancelButton"
                Grid.Column="3"
                Margin="{DynamicResource WolvenKitMarginSmallLeft}"
                Padding="{DynamicResource WolvenKitMarginSmall}"
                HorizontalAlignment="Right"
                Content="Cancel" />
        </Grid>
    </Grid>
</reactiveUi:ReactiveUserControl>
