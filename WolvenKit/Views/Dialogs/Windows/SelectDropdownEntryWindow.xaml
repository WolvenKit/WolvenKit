<Window
    x:Class="WolvenKit.Views.Dialogs.Windows.SelectDropdownEntryWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:editors="clr-namespace:WolvenKit.Views.Editors"
    Title="{Binding Title}"
    MinWidth="{DynamicResource WolvenKitDialogWidthSmall}"
    MinHeight="{DynamicResource WolvenKitDialogHeightSmall}"
    SizeToContent="WidthAndHeight"
    DataContext="{Binding RelativeSource={RelativeSource Self},
                          Path=ViewModel}"
    FocusManager.FocusedElement="{Binding ElementName=TextBox}"
    WindowStartupLocation="CenterOwner">
    <Grid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        hc:ThemeManager.RequestedAccentColor="{DynamicResource MahApps.Brushes.Accent3}">
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <hc:ThemeResources />
                    <hc:Theme />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>

        <syncfusion:WizardControl
            CancelButtonCancelsWindow="True"
            FinishButtonClosesWindow="True"
            Help="OnHelpClicked">
            <syncfusion:WizardPage
                BackVisibility="Collapsed"
                CancelVisibility="Visible"
                FinishVisibility="Visible"
                HelpVisibility="{Binding ShowHelpButton,
                                         Converter={StaticResource BooleanToVisibilityConverter}}"
                NextVisibility="Collapsed"
                PreviewKeyDown="WizardPage_PreviewKeyDown"
                PageType="Exterior">
                <StackPanel
                    Margin="{DynamicResource WolvenKitMarginTiny}"
                    Orientation="Vertical">
                    <TextBlock
                        Margin="{DynamicResource WolvenKitMarginSmallBottom}"
                        Padding="{DynamicResource WolvenKitMarginTinyLeft}"
                        Visibility="{Binding ShowText,
                                             Converter={StaticResource BooleanToVisibilityConverter}}"
                        Text="{Binding Text}" />

                    <Button
                        x:Name="ClickButton"
                        Width="{DynamicResource WolvenKitDialogWidthSmall}"
                        Height="Auto"
                        Margin="{DynamicResource WolvenKitMarginBottom}"
                        Padding="{DynamicResource WolvenKitMarginTiny}"
                        HorizontalAlignment="Stretch"
                        Background="{StaticResource BackgroundColor_Button_Active}"
                        Foreground="White"
                        Style="{DynamicResource ModernButtonStyle}"
                        Visibility="{Binding ShowButton,
                                             Converter={StaticResource StringToVisibilityConverter}}"
                        Content="{Binding ButtonText}"
                        Click="OnButtonClick" />

                    <editors:FilterableDropdownMenu
                        x:Name="Dropdown"
                        Margin="{DynamicResource WolvenKitMarginBottom}"
                        Options="{Binding Options,
                                          UpdateSourceTrigger=PropertyChanged}"
                        IsInline="False"
                        SelectedOption="{Binding SelectedOption}"
                        KeyboardNavigation.TabIndex="1" />

                    <TextBlock
                        Margin="{DynamicResource WolvenKitMarginSmallBottom}"
                        Padding="{DynamicResource WolvenKitMarginTinyLeft}"
                        Visibility="{Binding ShowInputBar,
                                             Converter={StaticResource BooleanToVisibilityConverter}}"
                        Text="... or enter by hand" />

                    <TextBox
                        x:Name="TextBox"
                        Padding="{DynamicResource WolvenKitMarginTiny}"
                        VerticalContentAlignment="Center"
                        FontSize="{DynamicResource WolvenKitFontBody}"
                        Visibility="{Binding ShowInputBar,
                                             Converter={StaticResource BooleanToVisibilityConverter}}"
                        Text="{Binding SelectedOption}"
                        KeyboardNavigation.TabIndex="0" />

                </StackPanel>
            </syncfusion:WizardPage>
        </syncfusion:WizardControl>
    </Grid>
</Window>