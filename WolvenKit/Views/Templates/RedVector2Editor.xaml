<UserControl
    x:Class="WolvenKit.Views.Editors.RedVector2Editor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WolvenKit.Views.Editors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    mc:Ignorable="d"
    d:DesignWidth="400"
    d:DesignHeight="64"
    KeyboardNavigation.TabNavigation="Local">
    <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:RedVector2Editor}}}">
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="{DynamicResource WolvenKitRedEditorRowMinHeight}" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{DynamicResource WolvenKitRedEditorComponentWidth}" />
            <ColumnDefinition />
            <ColumnDefinition Width="{DynamicResource WolvenKitRedEditorComponentWidth}" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Column="0"
            BorderBrush="{StaticResource BorderAlt}"
            BorderThickness="0,0,1,0" />
        <TextBlock
            Grid.Column="0"
            Margin="{DynamicResource WolvenKitMarginTiny}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="{DynamicResource WolvenKitFontSubTitle}"
            Text="X" />
        <syncfusion:DoubleTextBox
            Grid.Column="1"
            Padding="{DynamicResource WolvenKitMarginTinyLeft}"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Center"
            Background="{StaticResource ContentBackgroundAlt}"
            BorderThickness="0"
            FontSize="{DynamicResource WolvenKitFontSubTitle}"
            KeyboardNavigation.TabIndex="1"
            NumberDecimalDigits="4"
            Value="{Binding XValue,
                            Mode=TwoWay,
                            UpdateSourceTrigger=PropertyChanged}" />

        <Border
            Grid.Column="2"
            BorderBrush="{StaticResource BorderAlt}"
            BorderThickness="1,0,1,0" />
        <TextBlock
            Grid.Column="2"
            Margin="{DynamicResource WolvenKitMarginTiny}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="{DynamicResource WolvenKitFontSubTitle}"
            Text="Y" />
        <syncfusion:DoubleTextBox
            Grid.Column="3"
            Padding="{DynamicResource WolvenKitMarginTinyLeft}"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Center"
            Background="{StaticResource ContentBackgroundAlt}"
            BorderThickness="0"
            FontSize="{DynamicResource WolvenKitFontSubTitle}"
            KeyboardNavigation.TabIndex="2"
            NumberDecimalDigits="4"
            Value="{Binding YValue,
                            Mode=TwoWay,
                            UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>
