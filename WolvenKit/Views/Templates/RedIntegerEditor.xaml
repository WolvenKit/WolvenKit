<UserControl
    x:Class="WolvenKit.Views.Editors.RedIntegerEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WolvenKit.Views.Editors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    d:DesignHeight="100"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid Background="#252525" DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:RedIntegerEditor}}}">

        <syncfusion:UpDown
            x:Name="UpDown"
            Margin="5,0,0,0"
            Padding="0"
            Background="Transparent"
            BorderThickness="0"
            IsScrollingOnCircle="False"
            MaxValue="{Binding MaxValue, Mode=OneWay}"
            MinValue="{Binding MinValue, Mode=OneWay}"
            NumberDecimalDigits="{Binding NumberDecimalDigits, Mode=OneWay}"
            Value="{Binding Value}" />

    </Grid>
</UserControl>
