<UserControl
    x:Class="WolvenKit.Views.Templates.UIntAsEnumEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WolvenKit.Views.Templates"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type={x:Type local:UIntAsEnumEditor}}"
    d:DesignWidth="400"
    d:DesignHeight="64">
    <Grid>
        <ComboBox
            x:Name="ComboBox"
            Padding="{DynamicResource WolvenKitMarginTiny}"
            DataContext="{Binding Mode=OneWay,
                                  RelativeSource={RelativeSource FindAncestor,
                                                                 AncestorType={x:Type local:UIntAsEnumEditor}}}"
            ItemsSource="{Binding BindingCollection,
                                  Mode=TwoWay,
                                  UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding SelectedItem}" />
    </Grid>
</UserControl>