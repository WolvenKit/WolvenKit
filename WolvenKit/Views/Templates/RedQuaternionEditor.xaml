<UserControl
    x:Class="WolvenKit.Views.Editors.RedQuaternionEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WolvenKit.Views.Editors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="100"
    d:DesignWidth="400">

    <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:RedQuaternionEditor}}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition />
            <ColumnDefinition Width="20" />
            <ColumnDefinition />
            <ColumnDefinition Width="20" />
            <ColumnDefinition />
            <ColumnDefinition Width="20" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="I" />
        <TextBox
            x:Name="ITextBox"
            Grid.Column="1"
            PreviewTextInput="NumberValidationTextBox"
            Text="{Binding IText}" />
        <TextBlock
            Grid.Column="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="J" />
        <TextBox
            x:Name="JTextBox"
            Grid.Column="3"
            PreviewTextInput="NumberValidationTextBox"
            Text="{Binding JText}" />
        <TextBlock
            Grid.Column="4"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="K" />
        <TextBox
            x:Name="KTextBox"
            Grid.Column="5"
            PreviewTextInput="NumberValidationTextBox"
            Text="{Binding KText}" />
        <TextBlock
            Grid.Column="6"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="R" />
        <TextBox
            x:Name="RTextBox"
            Grid.Column="7"
            PreviewTextInput="NumberValidationTextBox"
            Text="{Binding RText}" />

    </Grid>
</UserControl>
