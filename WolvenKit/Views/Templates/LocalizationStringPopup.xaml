<Window x:Class="WolvenKit.Views.Templates.LocalizationStringPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WolvenKit.Views.Templates"
        mc:Ignorable="d"
        Title="Localization String Editor" 
        Height="300" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Female Variant -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Female Variant:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="0" Grid.Column="1" 
                 Text="{Binding FemaleVariant, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,0,0,5" Height="60" 
                 TextWrapping="Wrap" AcceptsReturn="True"/>

        <!-- Male Variant -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Male Variant:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding MaleVariant, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,0,0,5" Height="60" 
                 TextWrapping="Wrap" AcceptsReturn="True"/>

        <!-- Secondary Key -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Secondary Key:" Margin="0,0,5,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
                 Text="{Binding SecondaryKey, UpdateSourceTrigger=PropertyChanged}" 
                 Margin="0,0,0,5"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="OK" Width="75" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
