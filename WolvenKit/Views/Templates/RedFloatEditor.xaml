<UserControl
    x:Class="WolvenKit.Views.Editors.RedFloatEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WolvenKit.Views.Editors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="400"
    d:DesignHeight="100">
    <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:RedFloatEditor}}}">
        <TextBox
            x:Name="TextBox"
            Padding="{DynamicResource WolvenKitMarginTiny}"
            VerticalContentAlignment="Center"
            FontSize="{DynamicResource WolvenKitFontSubTitle}"
            PreviewTextInput="NumberValidationTextBox"
            Text="{Binding Text}" />
    </Grid>
</UserControl>
