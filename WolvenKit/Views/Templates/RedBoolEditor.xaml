<UserControl
    x:Class="WolvenKit.Views.Editors.RedBoolEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WolvenKit.Views.Editors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="240"
    d:DesignHeight="48">
    <Grid DataContext="{Binding RelativeSource={RelativeSource FindAncestor,
                                                             AncestorType={x:Type local:RedBoolEditor}}}">
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="{DynamicResource WolvenKitRedEditorRowMinHeight}" />
        </Grid.RowDefinitions>

        <Viewbox
            Height="{DynamicResource WolvenKitIconTiny}"
            MaxHeight="{DynamicResource WolvenKitIconTiny}"
            Margin="{DynamicResource WolvenKitMarginTinyVertical}"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Stretch="Uniform">
            <CheckBox IsChecked="{Binding IsChecked}" />
        </Viewbox>
    </Grid>
</UserControl>
