<reactiveUi:ReactiveUserControl
    x:TypeArguments="shell:RibbonViewModel"
    x:Class="WolvenKit.Views.Shell.RibbonView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:HomeView="clr-namespace:WolvenKit.Views.HomePage"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:fluent="urn:fluent-ribbon"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:sfskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:shared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:shell="clr-namespace:WolvenKit.ViewModels.Shell;assembly=WolvenKit.App"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    >

    <!--  Resources  -->
    <UserControl.Resources>
        <ResourceDictionary>
            <!--  ContextAdorner Style  -->
            <Style x:Key="SyncfusionTemplatedAdornerInternalControlStyle2" TargetType="{x:Type shared:TemplatedAdornerInternalControl}">
                <Setter Property="Focusable" Value="False" />
                <Setter Property="Visibility" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:ContextAdorner}}, Path=ContextTabGroup.Visibility}" />
                <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:ContextAdorner}}, Converter={StaticResource colorToTransparentBrushConverter}, Path=ContextTabGroup.BackColor}" />
                <Setter Property="Height" Value="57" />
                <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:ContextAdorner}}, Converter={StaticResource colorToBrushConverter}, Path=ContextTabGroup.BackColor}" />
                <Setter Property="SnapsToDevicePixels" Value="True" />
                <Setter Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:ContextAdorner}}, Converter={StaticResource colorToTransparentBrushConverter}, Path=ContextTabGroup.BackColor}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type shared:TemplatedAdornerInternalControl}">
                            <Border
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                MinHeight="{TemplateBinding MinHeight}"
                                Margin="0,0,0,0"
                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                BorderThickness="0,4,0,0"
                                Panel.ZIndex="1000"
                                IsHitTestVisible="False">
                                <Grid>
                                    <Border
                                        Background="{DynamicResource MahApps.Brushes.Accent3}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1,0,1,0"
                                        Opacity="0.3" />
                                    <TextBlock
                                        x:Name="PART_Label"
                                        Margin="0,5,0,0"
                                        HorizontalAlignment="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:Ribbon}}, Path=TabGroupLabelAlignment}"
                                        VerticalAlignment="Top"
                                        FontSize="10"
                                        FontWeight="Normal"
                                        Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                        Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:ContextAdorner}}, Path=ContextTabGroup.Label}"
                                        TextAlignment="Center"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding RibbonState, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:Ribbon}}}" Value="Hide" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Margin" Value="0,0,0,-2" />
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding RibbonState, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:Ribbon}}}" Value="Adorner" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Margin" Value="0,0,0,-3" />
                                </MultiDataTrigger>
                                <Trigger Property="sfskin:SfSkinManager.SizeMode" Value="Touch">
                                    <Setter Property="MinHeight" Value="75" />
                                    <Setter Property="Margin" Value="0,-18,0,0" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <shared:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <!--  Grey Bar for the top -->
    <Border x:Name="TitlebarCoverer"
            Margin="0,-32,0,0"
            Padding="0,32,0,0"
            BorderThickness="0,0,0,0"
            Background="{StaticResource ContentBackgroundAlt2}"
            BorderBrush="{StaticResource BorderAlt}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="top"
            MouseLeftButtonDown="Ribbon_MouseLeftButtonDown"
             >
        <Grid
        Background="{DynamicResource ContentBackgroundAlt2}">



            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <!--  Light Grey border for the bottom -->
            <!--Border
            Grid.Row="2"
            BorderThickness="0,0,0,1"
            Background="{StaticResource ContentBackgroundAlt}"
            BorderBrush="{StaticResource BorderAlt}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom"
            Panel.ZIndex="0"
             /-->

            <ToolBarTray
            Margin="30,0,0,0"
            Height="Auto"
            VerticalAlignment="Top"
            IsLocked="True"
            >
                <ToolBarTray.Style>
                    <Style TargetType="ToolBarTray" BasedOn="{StaticResource ToolBarTrayBaseStyle}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked, ElementName=ribbonEnabled}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ToolBarTray.Style>
                <ToolBarTray.Resources>
                    <Style x:Key="WolvenKitToolBarButtonIcon" TargetType="{x:Type iconPacks:PackIconControlBase}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=IsEnabled, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource Border}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="WolvenKitToolBarButtonIconEraser" TargetType="{x:Type iconPacks:PackIconControlBase}" BasedOn="{StaticResource WolvenKitToolBarButtonIcon}">
                        <Setter Property="Foreground" Value="{StaticResource ContentBackgroundAlt}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource AncestorType={x:Type UIElement}, AncestorLevel=4}}" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource ContentBackgroundAlt5}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=IsPressed, RelativeSource={RelativeSource AncestorType={x:Type Button}, AncestorLevel=4}}" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource ContentBackground}" />
                            </DataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource AncestorType={x:Type UIElement}, AncestorLevel=4}}" Value="True" />
                                    <Condition Binding="{Binding Path=IsPressed, RelativeSource={RelativeSource AncestorType={x:Type Button}, AncestorLevel=4}}" Value="True" />
                                </MultiDataTrigger.Conditions>
                                <Setter Property="Foreground" Value="{StaticResource ContentBackgroundAlt}" />
                            </MultiDataTrigger>
                            <DataTrigger Binding="{Binding Path=IsEnabled, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource ContentBackgroundAlt2}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="WolvenKitToolBarButtonText" TargetType="TextBlock">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=IsEnabled, RelativeSource={RelativeSource AncestorType={x:Type UIElement}, AncestorLevel=4}}" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource Border}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                    <Style x:Key="{x:Static ToolBar.ButtonStyleKey}" TargetType="{x:Type Button}">
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Border.Background" Value="Transparent" />
                        <Setter Property="Height" Value="22" />
                        <Setter Property="Border.Padding" Value="5,0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Background="{TemplateBinding Border.Background}" CornerRadius="3" Padding="{TemplateBinding Border.Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ContentBackgroundAlt5}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource ContentBackground}" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsPressed" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter Property="Border.Background" Value="{StaticResource ContentBackgroundAlt}" />
                            </MultiTrigger>
                        </Style.Triggers>
                        <Style.Resources>
                            <Style TargetType="{x:Type iconPacks:PackIconControlBase}" BasedOn="{StaticResource WolvenKitToolBarButtonIcon}">
                                <Setter Property="Visibility" Value="{Binding IsChecked, ElementName=toolbarIcons, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource WolvenKitToolBarButtonText}">
                                <Setter Property="Visibility" Value="{Binding IsChecked, ElementName=toolbarLabels, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </Style>
                        </Style.Resources>
                    </Style>
                    <Style x:Key="{x:Static ToolBar.ToggleButtonStyleKey}" TargetType="{x:Type ToggleButton}">
                        <Setter Property="Border.Background" Value="{StaticResource ContentBackgroundAlt4}" />
                        <Setter Property="Height" Value="22" />
                        <Setter Property="Border.Padding" Value="5,0" />
                        <Setter Property="Border.Margin" Value="2,0,0,0" />
                        <Setter Property="Border.BorderBrush" Value="{StaticResource ContentBackground}" />
                        <Setter Property="Border.BorderThickness" Value="0,0,0,1" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                    <Border Background="{TemplateBinding Border.Background}" CornerRadius="3" Padding="{TemplateBinding Border.Padding}" Margin="{TemplateBinding Border.Margin}" BorderBrush="{TemplateBinding Border.BorderBrush}" BorderThickness="{TemplateBinding Border.BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Border.Background" Value="{StaticResource ContentBackgroundAlt5}" />
                                <Setter Property="Border.BorderBrush" Value="{StaticResource ContentBackground}" />
                                <Setter Property="Border.BorderThickness" Value="0,0,0,1" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Border.Background" Value="{StaticResource ContentBackground}" />
                                <Setter Property="Border.BorderBrush" Value="Black" />
                                <Setter Property="Border.BorderThickness" Value="0,1,0,0" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsChecked" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter Property="Border.Background" Value="{StaticResource ContentBackgroundAlt}" />
                                <Setter Property="Border.BorderBrush" Value="{StaticResource ContentBackground}" />
                                <Setter Property="Border.BorderThickness" Value="0,1,0,0" />
                            </MultiTrigger>
                        </Style.Triggers>
                        <Style.Resources>
                            <Style TargetType="{x:Type iconPacks:PackIconControlBase}" BasedOn="{StaticResource WolvenKitToolBarButtonIcon}">
                                <Setter Property="Visibility" Value="{Binding IsChecked, ElementName=toolbarIcons, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource WolvenKitToolBarButtonText}">
                                <Setter Property="Visibility" Value="{Binding IsChecked, ElementName=toolbarLabels, Converter={StaticResource BoolToVisibilityConverter}}" />
                            </Style>
                        </Style.Resources>
                    </Style>
                </ToolBarTray.Resources>

                <!-- New ToolBar Buttons Start -->

                <ToolBar Background="Transparent">
                    <TextBlock Visibility="Collapsed" Text="File:" Height="30" Padding="5,7" Foreground="{StaticResource ContentForeground}" />
                    <Button Command="{Binding NewFileCommand}" ToolTip="New File">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <iconPacks:PackIconMaterial
                                Padding="0,0,2,2"
                                Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                Kind="File"
                                Foreground="{StaticResource WolvenKitYellow}"/>
                                <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIconEraser}"
                                Padding="6,6,-3,-3"
                                Kind="Circle" />
                                <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                Padding="8,8,-1,-1"
                                Kind="PlusCircle" />
                            </Grid>
                            <TextBlock Text="New File" Padding="5,0,0,0" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ToolbarSaveButton" ToolTip="Save File">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                            Padding="0,1,0,1"
                            Style="{StaticResource WolvenKitToolBarButtonIcon}"
                            Foreground="{StaticResource WolvenKitCyan}"
                            Kind="ContentSave" />
                            <TextBlock Text="Save" Padding="5,0,0,0" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ToolbarSaveAsButton" ToolTip="Save File">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                            Padding="0,1,0,1"
                            Style="{StaticResource WolvenKitToolBarButtonIcon}"
                            Foreground="{StaticResource WolvenKitCyan}"
                            Kind="ContentSaveEdit" />
                            <TextBlock Text="Save As" Padding="5,0,0,0" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ToolbarSaveAllButton" ToolTip="Save All Files">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                            Padding="0,1,0,1"
                            Style="{StaticResource WolvenKitToolBarButtonIcon}"
                            Foreground="{StaticResource WolvenKitCyan}"
                                    Kind="ContentSaveAll" />
                            <TextBlock Text="Save All" Padding="5,0,0,0" />
                        </StackPanel>
                    </Button>
                    <Separator Margin="3" />
                    <TextBlock Text="Project:" Height="30" Padding="5,7" Visibility="Collapsed" />
                    <Button ToolTip="New Project" x:Name="ToolbarNewProjectButton">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <iconPacks:PackIconMaterialDesign Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                Padding="0,0,2,2"
                                Foreground="{StaticResource WolvenKitTan}"
                                Kind="Folder" />
                                <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIconEraser}"
                                Padding="6,6,-3,-3"
                                Kind="Circle" />
                                <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                Padding="8,8,-1,-1"
                                Kind="PlusCircle" />
                            </Grid>
                            <TextBlock Text="New Project" Padding="5,0,0,0" />
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding OpenProjectCommand}" ToolTip="Open Project">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                Foreground="{StaticResource WolvenKitTan}"
                                Kind="FolderOpen" />
                            <TextBlock Text="Open Project" Padding="5,0,0,0" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ToolbarPackProjectButton" ToolTip="Pack Project">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                Foreground="{StaticResource WolvenKitRed}"
                                Padding="0,0,2,2"
                                Kind="Archive" />
                                <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIconEraser}"
                                Padding="6,6,-3,-3"
                                Kind="Circle" />
                                <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                Padding="8,8,-1,-1"
                                Kind="Cog" />
                            </Grid>
                            <TextBlock Text="Pack Project" Padding="5,0,0,0" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ToolbarPackInstallButton" ToolTip="Pack &amp; Install Project">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                Foreground="{StaticResource WolvenKitRed}"
                                Padding="0,0,2,2"
                                Kind="Archive" />
                                <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIconEraser}"
                                Padding="7,7,-2,-2"
                                Kind="ArrowRight" />
                                <iconPacks:PackIconCodicons Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                Padding="9,8,-1,-1"
                                Kind="ArrowRight" />
                            </Grid>
                            <TextBlock Text="Pack &amp; Install" Padding="5,0,0,0" />
                        </StackPanel>
                    </Button>
                    <Separator Margin="3" />
                    <TextBlock Text="MatRepo:" Height="30" Padding="5,7" Foreground="{StaticResource ContentForeground}" Visibility="Collapsed"/>
                    <Menu Height="22" Margin="0,0,0,0">
                        <MenuItem Header="Game Depot" HorizontalContentAlignment="Left">
                            <MenuItem.Icon>
                                <iconPacks:PackIconCodicons Margin="2,5,-8,0" Width="7"
                                    Kind="TriangleDown" />
                            </MenuItem.Icon>

                            <MenuItem Command="{Binding UnbundleGameCommand}" Header="Unbundle Game to Depot">
                                <MenuItem.Icon>
                                    <Grid Margin="0,0,-8,0" Width="18">
                                        <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                                    Foreground="{StaticResource WolvenKitTan}"
                                Padding="0,0,2,2"
                                Kind="Archive" />
                                        <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                                    Foreground="{StaticResource ContentBackgroundAlt2}"
                                Padding="6,6,-3,-3"
                                Kind="Circle" />
                                        <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                Padding="8,8,-1,-1"
                                Kind="Cog" />
                                    </Grid>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Click="GenerateMaterialRepoButton_Click" Header="Extract Materials to Depot">
                                <MenuItem.Icon>
                                    <Grid Margin="0,0,-8,0" Width="18">
                                        <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                                    Foreground="{StaticResource WolvenKitTan}"
                                Padding="0,0,2,2"
                                Kind="PictureOutline" />
                                        <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                                    Foreground="{StaticResource ContentBackgroundAlt2}"
                                Padding="6,6,-3,-3"
                                Kind="Circle" />
                                        <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                Padding="8,8,-1,-1"
                                Kind="Cog" />
                                    </Grid>
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Command="{Binding OpenMaterialRepositoryCommand}" Header="Browse Game Depot">
                                <MenuItem.Icon>
                                    <Grid Margin="0,0,-8,0" Width="18">
                                        <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                    Foreground="{StaticResource WolvenKitTan}"
                                    Kind="List"/>
                                    </Grid>
                                </MenuItem.Icon>
                            </MenuItem>
                        </MenuItem>
                    </Menu>
                    <TextBlock Text="Panels:" Height="30" Padding="5,7" Foreground="{StaticResource ContentForeground}" Visibility="Collapsed" />
                    <Menu Height="22" Margin="0,0,3,0">
                        <MenuItem Header="View Options">
                            <MenuItem.Icon>
                                <iconPacks:PackIconCodicons Margin="2,5,-8,0" Width="7"
                                    Kind="TriangleDown" />
                            </MenuItem.Icon>
                            <MenuItem Command="{Binding ViewProjectExplorerCommand}" IsCheckable="True" Header="Project Explorer"/>
                            <MenuItem Command="{Binding ViewAssetBrowserCommand}" IsCheckable="True" Header="Asset Browser"/>
                            <MenuItem Command="{Binding ViewPropertiesCommand}" IsCheckable="True" Header="Properties"/>
                            <MenuItem Command="{Binding ViewLogCommand}" IsCheckable="True" Header="Log"/>
                            <MenuItem Command="{Binding ShowImportExportToolCommand}" IsCheckable="True" Header="Import / Export"/>
                            <Separator Background="{StaticResource BorderAlt}" Margin="0,5,0,3"/>
                            <MenuItem Click="SaveLayoutToProject" Header="Save Layout to Project">
                                <MenuItem.Icon>
                                    <iconPacks:PackIconMaterialDesign Padding="7,1,-2,0"
                                    Kind="Save" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <MenuItem Click="SetLayoutToDefault" Header="Reset Panel Layout">
                                <MenuItem.Icon>
                                    <iconPacks:PackIconMaterialDesign Padding="7,1,-2,0"
                                    Kind="Refresh" />
                                </MenuItem.Icon>
                            </MenuItem>
                            <Separator Background="{StaticResource BorderAlt}" Margin="0,5,0,3"/>
                            <MenuItem Header="Show File Preview" IsCheckable="True" IsChecked="{Binding _settingsManager.ShowFilePreview, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                  ToolTip="Toggle interactive file preview for improved performance"/>
                            <Separator Background="{StaticResource BorderAlt}" Margin="0,5,0,3"/>
                            <!--MenuItem x:Name="lockTop" Header="Lock Toolbar" IsCheckable="True" IsChecked="True" /-->
                            <!--MenuItem x:Name="toolbarIcons" Header="Show Toolbar Icons" IsCheckable="True" IsChecked="True" /-->
                            <MenuItem x:Name="toolbarLabels" Header="Show Toolbar Labels" IsCheckable="True" IsChecked="True" />
                            <MenuItem x:Name="ribbonEnabled" Header="Use Ribbon Instead" IsCheckable="True" IsChecked="False" />
                        </MenuItem>
                    </Menu>
                    <TextBlock Text="Options:" Height="30" Padding="5,7" Foreground="{StaticResource ContentForeground}" Visibility="Collapsed"/>
                    <Button Command="{Binding ShowSettingsCommand}" ToolTip="Settings">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconCodicons Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                    Kind="Settings" />
                            <TextBlock Text="Settings" Padding="5,0,0,0" />
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ShowBugReportCommand}" ToolTip="Bug Report">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconCodicons Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                    Kind="Bug" />
                            <TextBlock Text="Report Bug" Padding="5,0,0,0" />
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding ShowFeedbackCommand}" ToolTip="Feedback">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconCodicons Style="{StaticResource WolvenKitToolBarButtonIcon}"
                                    Kind="Feedback" />
                            <TextBlock Text="Feedback" Padding="5,0,0,0" />
                        </StackPanel>
                    </Button>
                </ToolBar>
            </ToolBarTray>

            <fluent:Ribbon
            x:Name="ribbon"
            Grid.Row="0"
            Margin="0,0,0,0"
            Visibility="Collapsed">
                <fluent:Ribbon.Resources>
                    <PopupAnimation x:Key="{x:Static SystemParameters.MenuPopupAnimationKey}">None</PopupAnimation>
                </fluent:Ribbon.Resources>

                <!--  StartScreen  -->
                <fluent:Ribbon.Menu>
                    <fluent:Backstage
                        Width="500"
                        x:Name="startScreen"
                        CloseOnEsc="False"
                        Background="{StaticResource ContentBackgroundAlt}"
                        IsOpen="{Binding BackstageIsOpen}">
                        <fluent:Backstage.Resources>
                            <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Backstage.Background">LightBlue</SolidColorBrush>
                            <SolidColorBrush x:Key="Fluent.Ribbon.Brushes.Backstage.Foreground">LightBlue</SolidColorBrush>
                        </fluent:Backstage.Resources>
                        <HomeView:HomePageView x:Name="HMPV" />
                    </fluent:Backstage>
                </fluent:Ribbon.Menu>

            </fluent:Ribbon>



            <syncfusion:Ribbon
            x:Name="_ribbon"
            Margin="60,0,0,-2"
            EnableSimplifiedLayoutMode="True" 
            Panel.ZIndex="0"
            BackStageCornerImageVisibility="Collapsed"
            BackStageHeader="MENU"
            ContextAdornerStyle="{StaticResource SyncfusionTemplatedAdornerInternalControlStyle2}"
            EnableMoreCommands="True"
            LayoutMode="Simplified"
            ShowCustomizeRibbon="True"
            Visibility="{Binding IsChecked, ElementName=ribbonEnabled, Converter={StaticResource BoolToVisibilityConverter}}"
            VerticalAlignment="Top"
            BorderThickness="0"
            >
                <!--<syncfusion:Ribbon.QuickAccessToolBar>
                <syncfusion:QuickAccessToolBar Margin="65,0,0,0" />
            </syncfusion:Ribbon.QuickAccessToolBar>-->

                <!--  Contextual Tabs  -->
                <syncfusion:Ribbon.ContextTabGroups>

                    <!--  Contextual CR2W group  -->
                    <syncfusion:ContextTabGroup
                    x:Name="documentContextTab"
                    Height="90"
                    Margin="14"
                    IsGroupVisible="False"
