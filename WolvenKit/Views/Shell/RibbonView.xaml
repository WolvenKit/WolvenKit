<reactiveUi:ReactiveUserControl
    x:Class="WolvenKit.Views.Shell.RibbonView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:shared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF"
    xmlns:shell="clr-namespace:WolvenKit.ViewModels.Shell;assembly=WolvenKit.App"
    x:TypeArguments="shell:RibbonViewModel">

    <!--  Resources  -->
    <UserControl.Resources>
        <ResourceDictionary>
            <shared:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Border
        x:Name="TitlebarCoverer"
        Margin="0,0,0,0"
        Padding="0,32,0,0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="top"
        Background="{StaticResource ContentBackgroundAlt2}"
        BorderBrush="{StaticResource BorderAlt}"
        BorderThickness="0,0,0,0"
        MouseLeftButtonDown="Ribbon_MouseLeftButtonDown">

        <Grid Background="{DynamicResource ContentBackgroundAlt2}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.Resources>
                <Style x:Key="WolvenKitToolBarButtonIcon" TargetType="{x:Type iconPacks:PackIconControlBase}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsEnabled, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource Border}" />
                            <Setter Property="Opacity" Value="0.5" />
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Foreground, RelativeSource={RelativeSource Self}}" Value="{StaticResource Border}" />
                                <Condition Binding="{Binding Path=IsEnabled, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Opacity" Value="1.0" />
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
                <Style x:Key="WolvenKitToolBarButtonIconEraser" BasedOn="{StaticResource WolvenKitToolBarButtonIcon}" TargetType="{x:Type iconPacks:PackIconControlBase}">
                    <Setter Property="Foreground" Value="{StaticResource ContentBackgroundAlt}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource AncestorType={x:Type UIElement}, AncestorLevel=4}}" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource ContentBackgroundAlt5}" />
                            <Setter Property="Opacity" Value="1.0" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=IsPressed, RelativeSource={RelativeSource AncestorType={x:Type Button}, AncestorLevel=4}}" Value="True">
                            <Setter Property="Foreground" Value="{StaticResource ContentBackground}" />
                            <Setter Property="Opacity" Value="1.0" />
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource AncestorType={x:Type UIElement}, AncestorLevel=4}}" Value="True" />
                                <Condition Binding="{Binding Path=IsPressed, RelativeSource={RelativeSource AncestorType={x:Type Button}, AncestorLevel=4}}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Foreground" Value="{StaticResource ContentBackgroundAlt}" />
                            <Setter Property="Opacity" Value="1.0" />
                        </MultiDataTrigger>
                        <DataTrigger Binding="{Binding Path=IsEnabled, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource ContentBackgroundAlt2}" />
                            <Setter Property="Opacity" Value="1.0" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
                <Style x:Key="WolvenKitToolBarButtonText" TargetType="TextBlock">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=IsEnabled, RelativeSource={RelativeSource AncestorType={x:Type UIElement}, AncestorLevel=4}}" Value="False">
                            <Setter Property="Foreground" Value="{StaticResource Border}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
                <Style x:Key="{x:Static ToolBar.ButtonStyleKey}" TargetType="{x:Type Button}">
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Border.Background" Value="Transparent" />
                    <Setter Property="Height" Value="22" />
                    <Setter Property="Border.Padding" Value="5,0" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Padding="{TemplateBinding Border.Padding}" Background="{TemplateBinding Border.Background}" CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource ContentBackgroundAlt5}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource ContentBackground}" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True" />
                                <Condition Property="IsPressed" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter Property="Border.Background" Value="{StaticResource ContentBackgroundAlt}" />
                        </MultiTrigger>
                    </Style.Triggers>
                    <Style.Resources>
                        <Style BasedOn="{StaticResource WolvenKitToolBarButtonIcon}" TargetType="{x:Type iconPacks:PackIconControlBase}">
                            <Setter Property="Visibility" Value="{Binding IsChecked, ElementName=toolbarIcons, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </Style>
                        <Style BasedOn="{StaticResource WolvenKitToolBarButtonText}" TargetType="TextBlock">
                            <Setter Property="Visibility" Value="{Binding IsChecked, ElementName=toolbarLabels, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </Style>
                    </Style.Resources>
                </Style>
                <Style x:Key="{x:Static ToolBar.ToggleButtonStyleKey}" TargetType="{x:Type ToggleButton}">
                    <Setter Property="Border.Background" Value="{StaticResource ContentBackgroundAlt4}" />
                    <Setter Property="Height" Value="22" />
                    <Setter Property="Border.Padding" Value="5,0" />
                    <Setter Property="Border.Margin" Value="2,0,0,0" />
                    <Setter Property="Border.BorderBrush" Value="{StaticResource ContentBackground}" />
                    <Setter Property="Border.BorderThickness" Value="0,0,0,1" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                <Border
                                    Margin="{TemplateBinding Border.Margin}"
                                    Padding="{TemplateBinding Border.Padding}"
                                    Background="{TemplateBinding Border.Background}"
                                    BorderBrush="{TemplateBinding Border.BorderBrush}"
                                    BorderThickness="{TemplateBinding Border.BorderThickness}"
                                    CornerRadius="3">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Border.Background" Value="{StaticResource ContentBackgroundAlt5}" />
                            <Setter Property="Border.BorderBrush" Value="{StaticResource ContentBackground}" />
                            <Setter Property="Border.BorderThickness" Value="0,0,0,1" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Border.Background" Value="{StaticResource ContentBackground}" />
                            <Setter Property="Border.BorderBrush" Value="Black" />
                            <Setter Property="Border.BorderThickness" Value="0,1,0,0" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True" />
                                <Condition Property="IsChecked" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter Property="Border.Background" Value="{StaticResource ContentBackgroundAlt}" />
                            <Setter Property="Border.BorderBrush" Value="{StaticResource ContentBackground}" />
                            <Setter Property="Border.BorderThickness" Value="0,1,0,0" />
                        </MultiTrigger>
                    </Style.Triggers>
                    <Style.Resources>
                        <Style BasedOn="{StaticResource WolvenKitToolBarButtonIcon}" TargetType="{x:Type iconPacks:PackIconControlBase}">
                            <Setter Property="Visibility" Value="{Binding IsChecked, ElementName=toolbarIcons, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </Style>
                        <Style BasedOn="{StaticResource WolvenKitToolBarButtonText}" TargetType="TextBlock">
                            <Setter Property="Visibility" Value="{Binding IsChecked, ElementName=toolbarLabels, Converter={StaticResource BoolToVisibilityConverter}}" />
                        </Style>
                    </Style.Resources>
                </Style>
            </Grid.Resources>

            <Menu Background="Transparent">

                <MenuItem x:Name="HomeButton" Header="HOME" Padding="4,12" Margin="8,0,8,0">
                    <MenuItem.Icon>
                        <Image Height="24" Source="pack://application:,,,/Resources/Media/Images/Application/Sammy_Home.png"/>
                    </MenuItem.Icon>
                </MenuItem>

                <MenuItem Header="File" Padding="12,0" Margin="1,0">
                    <MenuItem Header="New File" Margin="2,1">
                        <MenuItem.Icon>
                            <Grid Margin="6,0">
                                <iconPacks:PackIconMaterial
                                    Padding="0,0,2,2"
                                    Foreground="{StaticResource WolvenKitYellow}"
                                    Kind="File"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                <iconPacks:PackIconForkAwesome
                                    Padding="6,6,-3,-3"
                                    Kind="Circle"
                                    Style="{StaticResource WolvenKitToolBarButtonIconEraser}" />
                                <iconPacks:PackIconForkAwesome
                                    Padding="8,8,-1,-1"
                                    BorderBrush="Black"
                                    Kind="PlusCircle"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                            </Grid>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Save" Margin="2,1">
                        <MenuItem.Icon>
                            <iconPacks:PackIconMaterial
                                Padding="0,1,0,1"
                                Margin="6,0"
                                Foreground="{StaticResource WolvenKitCyan}"
                                Kind="ContentSave"
                                Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Save As" Margin="2,1">
                        <MenuItem.Icon>
                            <iconPacks:PackIconMaterial
                                Padding="0,1,0,1"
                                Margin="6,0"
                                Foreground="{StaticResource WolvenKitCyan}"
                                Kind="ContentSaveEdit"
                                Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Save All" Margin="2,1">
                        <MenuItem.Icon>
                            <iconPacks:PackIconMaterial
                                Padding="0,1,0,1"
                                Margin="6,0"
                                Foreground="{StaticResource WolvenKitCyan}"
                                Kind="ContentSaveAll"
                                Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                        </MenuItem.Icon>
                    </MenuItem>

                    <Separator Margin="0,10"/>

                    <MenuItem  Header="New Project" x:Name="ToolbarNewProjectButton" ToolTip="Create new WolvenKit mod project"  Margin="2,1">
                        <MenuItem.Icon>
                            <Grid Margin="6,0">
                                <iconPacks:PackIconMaterialDesign
                                    Padding="0,0,2,2"
                                    Foreground="{StaticResource WolvenKitTan}"
                                    Kind="Folder"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                <iconPacks:PackIconForkAwesome
                                    Padding="6,6,-3,-3"
                                    Kind="Circle"
                                    Style="{StaticResource WolvenKitToolBarButtonIconEraser}" />
                                <iconPacks:PackIconForkAwesome
                                    Padding="8,8,-1,-1"
                                    Kind="PlusCircle"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                            </Grid>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem  Header="Open Project" Command="{Binding OpenProjectCommand}" ToolTip="Open existing WolvenKit mod project" Margin="2,1">
                        <MenuItem.Icon>
                            <iconPacks:PackIconForkAwesome
                                Foreground="{StaticResource WolvenKitTan}"
                                Margin="6,0"
                                Kind="FolderOpen"
                                Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

                <MenuItem Header="Edit" Padding="12,0" Margin="1,0">
                    <MenuItem Header="Settings" x:Name="ToolbarSettingsButton" Margin="2,1">
                        <MenuItem.Icon>
                            <iconPacks:PackIconCodicons
                                Kind="Settings"
                                Margin="6,0"
                                Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

                <MenuItem Header="Build" Padding="12,0" Margin="1,0">
                    <MenuItem Header="Pack Project" Command="{Binding PackProjectCommand}" ToolTip="Pack archives &amp; create mod package" Margin="2,1">
                        <MenuItem.Icon>
                            <Grid Margin="6,0">
                                <iconPacks:PackIconForkAwesome
                                    Padding="0,0,2,2"
                                    Foreground="{StaticResource WolvenKitRed}"
                                    Kind="Archive"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                            </Grid>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Pack &amp; Install" Command="{Binding PackInstallProjectCommand}" ToolTip="Pack archives, create mod package &amp; install project to game" Margin="2,1">
                        <MenuItem.Icon>
                            <Grid Margin="6,0">
                                <iconPacks:PackIconForkAwesome
                                    Padding="0,0,2,2"
                                    Foreground="{StaticResource WolvenKitRed}"
                                    Kind="Archive"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                <iconPacks:PackIconForkAwesome
                                    Padding="7,7,-2,-2"
                                    Kind="ArrowRight"
                                    Style="{StaticResource WolvenKitToolBarButtonIconEraser}" />
                                <iconPacks:PackIconCodicons
                                    Padding="9,8,-1,-1"
                                    Kind="ArrowRight"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                            </Grid>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Install and Run" Command="{Binding PackInstallRunProjectCommand}" ToolTip="Pack archives, install project &amp; launch game" Margin="2,1">
                        <MenuItem.Icon>
                            <Grid Margin="6,0">
                                <iconPacks:PackIconForkAwesome
                                    Padding="0,0,2,2"
                                    Foreground="LightGreen"
                                    Kind="Play"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                <iconPacks:PackIconForkAwesome
                                    Padding="7,7,-2,-2"
                                    Kind="ArrowRight"
                                    Style="{StaticResource WolvenKitToolBarButtonIconEraser}" />
                                <iconPacks:PackIconCodicons
                                    Padding="9,8,-1,-1"
                                    Kind="ArrowRight"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                            </Grid>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Hot Install" Command="{Binding HotInstallProjectCommand}" ToolTip="Pack archives &amp; install directly to hot directory" Margin="2,1">
                        <MenuItem.Icon>
                            <Grid Margin="6,0">
                                <iconPacks:PackIconForkAwesome
                                    Padding="0,0,2,2"
                                    Foreground="#f44b56"
                                    Kind="Fire"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                <iconPacks:PackIconForkAwesome
                                    Padding="7,7,-2,-2"
                                    Kind="ArrowRight"
                                    Style="{StaticResource WolvenKitToolBarButtonIconEraser}" />
                                <iconPacks:PackIconCodicons
                                    Padding="9,8,-1,-1"
                                    Kind="ArrowRight"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                            </Grid>
                        </MenuItem.Icon>
                    </MenuItem>

                </MenuItem>

                <MenuItem Header="View" Padding="12,0" Margin="1,0">
                    <MenuItem
                        x:Name="ProjectExplorerCheckbox"
                        Header="Project Explorer"
                        IsCheckable="True"
                        Margin="2,1"/>
                    <MenuItem
                        x:Name="AssetBrowserCheckbox"
                        Header="Asset Browser"
                        IsCheckable="True"
                        Margin="2,1"/>
                    <MenuItem
                        x:Name="PropertiesCheckbox"
                        Header="Properties"
                        IsCheckable="True"
                        Margin="2,1"/>
                    <MenuItem
                        x:Name="LogCheckbox"
                        Header="Log"
                        IsCheckable="True"
                        Margin="2,1"/>
                    <MenuItem
                        x:Name="ImportExportCheckbox"
                        Header="Import / Export"
                        IsCheckable="True"
                        Margin="2,1"/>
                    <MenuItem
                        x:Name="TweakBrowserCheckbox"
                        Header="Tweak Browser"
                        IsCheckable="True"
                        Margin="2,1"/>
                    <MenuItem
                        x:Name="LocKeyBrowserCheckbox"
                        Header="LocKey Browser"
                        IsCheckable="True"
                        Margin="2,1"/>

                    <Separator Margin="0,10"/>

                    <MenuItem
                        Header="Show File Preview"
                        IsCheckable="True"
                        IsChecked="{Binding _settingsManager.ShowFilePreview, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        ToolTip="Toggle interactive file preview for improved performance"
                        Margin="2,1">
                    </MenuItem>
                    <MenuItem
                        x:Name="toolbarLabels"
                        Header="Show Toolbar Labels"
                        IsCheckable="True"
                        IsChecked="True">
                    </MenuItem>

                    <Separator Margin="0,10"/>

                    <MenuItem Header="Save Layout to Project" Click="SaveLayoutToProject" Margin="2,1">
                        <MenuItem.Icon>
                            <iconPacks:PackIconMaterialDesign Padding="7,1,-2,0" Kind="Save" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="Reset Layout" Click="SetLayoutToDefault" Margin="2,1">
                        <MenuItem.Icon>
                            <iconPacks:PackIconMaterialDesign Padding="7,1,-2,0" Kind="Refresh" />
                        </MenuItem.Icon>
                    </MenuItem>

                </MenuItem>

                <MenuItem Header="Game" Padding="12,0" Margin="1,0">

                    <MenuItem Header="Launch Game" Margin="2,1">
                        <MenuItem.Icon>
                            <iconPacks:PackIconCodicons
                                Margin="5,0,5,0"
                                Foreground="{StaticResource WolvenKitYellow}"
                                Kind="RunAll"
                                Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                        </MenuItem.Icon>

                        <MenuItem x:Name="ToolbarLaunchButton" Header="Launch Game" Command="{Binding LaunchGameCommand}" />

                        <ComboBox x:Name="ToolbarLaunchCombobox" DisplayMemberPath="Name" />

                    </MenuItem>

                    <MenuItem HorizontalContentAlignment="Left" Header="Game Depot">
                        <MenuItem Command="{Binding UnbundleGameCommand}" Header="Unbundle Game to Depot">
                            <MenuItem.Icon>
                                <Grid Width="18" Margin="0,0,-8,0">
                                    <iconPacks:PackIconForkAwesome
                                        Padding="0,0,2,2"
                                        Foreground="{StaticResource WolvenKitTan}"
                                        Kind="Archive"
                                        Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                    <iconPacks:PackIconForkAwesome
                                        Padding="6,6,-3,-3"
                                        Foreground="{StaticResource ContentBackgroundAlt2}"
                                        Kind="Circle"
                                        Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                    <iconPacks:PackIconForkAwesome
                                        Padding="8,8,-1,-1"
                                        Kind="Cog"
                                        Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                </Grid>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Click="GenerateMaterialRepoButton_Click" Header="Extract Materials to Depot">
                            <MenuItem.Icon>
                                <Grid Width="18" Margin="0,0,-8,0">
                                    <iconPacks:PackIconForkAwesome
                                        Padding="0,0,2,2"
                                        Foreground="{StaticResource WolvenKitTan}"
                                        Kind="PictureOutline"
                                        Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                    <iconPacks:PackIconForkAwesome
                                        Padding="6,6,-3,-3"
                                        Foreground="{StaticResource ContentBackgroundAlt2}"
                                        Kind="Circle"
                                        Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                    <iconPacks:PackIconForkAwesome
                                        Padding="8,8,-1,-1"
                                        Kind="Cog"
                                        Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                </Grid>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Command="{Binding OpenMaterialRepositoryCommand}" Header="Browse Game Depot">
                            <MenuItem.Icon>
                                <Grid Width="18" Margin="0,0,-8,0">
                                    <iconPacks:PackIconForkAwesome
                                        Foreground="{StaticResource WolvenKitTan}"
                                        Kind="List"
                                        Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                </Grid>
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </MenuItem>

                <MenuItem Header="Extensions" Padding="12,0" Margin="1,0">
                    <MenuItem
                        Command="{Binding ShowPluginToolCommand}"
                        Header="Plugin Manager"
                        IsCheckable="False">
                        <MenuItem.Icon>
                            <iconPacks:PackIconForkAwesome
                                Padding="0,1,0,1"
                                Margin="6,0"
                                Foreground="{StaticResource WolvenKitRed}"
                                Kind="PuzzlePiece"
                                Style="{StaticResource WolvenKitToolBarButtonIcon}"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

            </Menu>

            <ToolBarTray
                Height="Auto"
                VerticalAlignment="Top"
                IsLocked="True"
                Grid.Row="1">

                <ToolBar Background="Transparent">

                    <!--syncfusion:SplitButtonAdv Command="{Binding NewFileCommand}" Label="New File" Style="{StaticResource SyncfusionSplitButtonAdvStyle}" IconWidth="20">
                    <syncfusion:SplitButtonAdv.IconTemplate>
                        <DataTemplate>
                            <Grid HorizontalAlignment="Center">
                            <iconPacks:PackIconMaterial
                            Padding="0,0,2,2"
                            Style="{StaticResource WolvenKitToolBarButtonIcon}"
                            Kind="File"
                            Foreground="{StaticResource WolvenKitYellow}"/>
                                <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIconEraser}"
                            Padding="6,6,-3,-3"
                            Kind="Circle" />
                                <iconPacks:PackIconForkAwesome Style="{StaticResource WolvenKitToolBarButtonIcon}"
                            Padding="8,8,-1,-1"
                            Kind="PlusCircle" />
                            </Grid>
                        </DataTemplate>
                    </syncfusion:SplitButtonAdv.IconTemplate>
                <syncfusion:DropDownMenuGroup>
                        <MenuItem HorizontalAlignment="Left" Header="Tweak" />
                        <MenuItem HorizontalAlignment="Left" Header="Redscript"/>
                        <MenuItem HorizontalAlignment="Left" Header="RED File"/>
                    </syncfusion:DropDownMenuGroup>
                </syncfusion:SplitButtonAdv-->

                    <Button x:Name="ToolbarNewButton" ToolTip="New File">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <iconPacks:PackIconMaterial
                                    Padding="0,0,2,2"
                                    Foreground="{StaticResource WolvenKitYellow}"
                                    Kind="File"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                <iconPacks:PackIconForkAwesome
                                    Padding="6,6,-3,-3"
                                    Kind="Circle"
                                    Style="{StaticResource WolvenKitToolBarButtonIconEraser}" />
                                <iconPacks:PackIconForkAwesome
                                    Padding="8,8,-1,-1"
                                    Kind="PlusCircle"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                            </Grid>
                            <TextBlock Padding="5,0,0,0" Text="New File" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ToolbarSaveButton" ToolTip="Save File">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Padding="0,1,0,1"
                                Foreground="{StaticResource WolvenKitCyan}"
                                Kind="ContentSave"
                                Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                            <TextBlock Padding="5,0,0,0" Text="Save" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ToolbarSaveAsButton" ToolTip="Save File">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Padding="0,1,0,1"
                                Foreground="{StaticResource WolvenKitCyan}"
                                Kind="ContentSaveEdit"
                                Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                            <TextBlock Padding="5,0,0,0" Text="Save As" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ToolbarSaveAllButton" ToolTip="Save All Files">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial
                                Padding="0,1,0,1"
                                Foreground="{StaticResource WolvenKitCyan}"
                                Kind="ContentSaveAll"
                                Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                            <TextBlock Padding="5,0,0,0" Text="Save All" />
                        </StackPanel>
                    </Button>
                    <Separator Margin="3" />
                    <TextBlock
                        Height="30"
                        Padding="5,7"
                        Text="Project:"
                        Visibility="Collapsed" />
                    <Button x:Name="ToolbarPackProjectButton" ToolTip="Pack archives &amp; create mod package">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <iconPacks:PackIconForkAwesome
                                    Padding="0,0,2,2"
                                    Foreground="{StaticResource WolvenKitRed}"
                                    Kind="Archive"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                            </Grid>
                            <TextBlock Padding="5,0,0,0" Text="Pack Project" />
                        </StackPanel>
                    </Button>
                    <Button x:Name="ToolbarPackInstallButton" ToolTip="Pack archives, create mod package &amp; install project to game">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <iconPacks:PackIconForkAwesome
                                    Padding="0,0,2,2"
                                    Foreground="{StaticResource WolvenKitRed}"
                                    Kind="Archive"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                                <iconPacks:PackIconForkAwesome
                                    Padding="7,7,-2,-2"
                                    Kind="ArrowRight"
                                    Style="{StaticResource WolvenKitToolBarButtonIconEraser}" />
                                <iconPacks:PackIconCodicons
                                    Padding="9,8,-1,-1"
                                    Kind="ArrowRight"
                                    Style="{StaticResource WolvenKitToolBarButtonIcon}" />
                            </Grid>
                            <TextBlock Padding="5,0,0,0" Text="Pack &amp; Install" />
                        </StackPanel>
                    </Button>

