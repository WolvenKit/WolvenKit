<reactiveUi:ReactiveUserControl
    x:TypeArguments="shell:RibbonViewModel"
    x:Class="WolvenKit.Views.Shell.RibbonView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:HomeView="clr-namespace:WolvenKit.Views.HomePage"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:feather="clr-namespace:Feather.Controls;assembly=Feather.Controls"
    xmlns:fluent="urn:fluent-ribbon"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:others="clr-namespace:WolvenKit.Views.Others"
    xmlns:sfskin="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
    xmlns:shared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:shell="clr-namespace:WolvenKit.ViewModels.Shell;assembly=WolvenKit.App"
    xmlns:shell1="clr-namespace:WolvenKit.Views.Shell"
    Panel.ZIndex="-15">

    <!--  Resources  -->
    <UserControl.Resources>
        <ResourceDictionary>
            <!--  ContextAdorner Style  -->
            <Style x:Key="SyncfusionTemplatedAdornerInternalControlStyle2" TargetType="{x:Type shared:TemplatedAdornerInternalControl}">
                <Setter Property="Focusable" Value="False" />
                <Setter Property="Visibility" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:ContextAdorner}}, Path=ContextTabGroup.Visibility}" />
                <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:ContextAdorner}}, Converter={StaticResource colorToTransparentBrushConverter}, Path=ContextTabGroup.BackColor}" />
                <Setter Property="Height" Value="57" />
                <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:ContextAdorner}}, Converter={StaticResource colorToBrushConverter}, Path=ContextTabGroup.BackColor}" />
                <Setter Property="SnapsToDevicePixels" Value="True" />
                <Setter Property="BorderBrush" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:ContextAdorner}}, Converter={StaticResource colorToTransparentBrushConverter}, Path=ContextTabGroup.BackColor}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type shared:TemplatedAdornerInternalControl}">
                            <Border
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                MinHeight="{TemplateBinding MinHeight}"
                                Margin="0,5,0,0"
                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                BorderThickness="0,4,0,0"
                                IsHitTestVisible="False">
                                <Grid>
                                    <Border
                                        Background="{DynamicResource MahApps.Brushes.Accent3}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="1,0,1,0"
                                        Opacity="0.3" />
                                    <TextBlock
                                        x:Name="PART_Label"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:Ribbon}}, Path=TabGroupLabelAlignment}"
                                        VerticalAlignment="Top"
                                        FontSize="10"
                                        FontWeight="Normal"
                                        Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}"
                                        Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:ContextAdorner}}, Path=ContextTabGroup.Label}"
                                        TextAlignment="Center"
                                        TextTrimming="CharacterEllipsis" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>

                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:RibbonWindow}}, Path=IsGlassActive}" Value="True" />
                                        <Condition Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:RibbonWindow}}, Path=WindowState}" Value="Normal" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter TargetName="PART_Label" Property="BitmapEffect">
                                        <Setter.Value>
                                            <OuterGlowBitmapEffect
                                                GlowColor="#FFFFFFFF"
                                                GlowSize="10"
                                                Opacity="1" />
                                        </Setter.Value>
                                    </Setter>
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding RibbonState, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:Ribbon}}}" Value="Hide" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Margin" Value="0,0,0,-3" />
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding RibbonState, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type syncfusion:Ribbon}}}" Value="Adorner" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Margin" Value="0,0,0,-3" />
                                </MultiDataTrigger>
                                <Trigger Property="sfskin:SfSkinManager.SizeMode" Value="Touch">
                                    <Setter Property="MinHeight" Value="75" />
                                    <Setter Property="Margin" Value="0,-18,0,0" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid
        Background="{DynamicResource ContentBackgroundAlt2}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <fluent:Ribbon
            x:Name="ribbon"
            Grid.Row="0"
            Margin="0,0,0,0"
            Panel.ZIndex="0"
            Visibility="Collapsed">
            
            <!--  StartScreen  -->
            <fluent:Ribbon.StartScreen>
                <fluent:StartScreen
                    x:Name="startScreen"
                    IsOpen="{Binding BackstageIsOpen}"
                    Shown="{Binding StartScreenShown}">
                    <HomeView:HomePageView x:Name="HMPV" />
                </fluent:StartScreen>
            </fluent:Ribbon.StartScreen>
            
        </fluent:Ribbon>

        <syncfusion:Ribbon
            x:Name="_ribbon"
            Margin="4,0,0,0"
            VerticalAlignment="Stretch"
            Panel.ZIndex="0"
            syncfusion:Ribbon.IsAutoSizeFormEnabled="True"
            BackStageCornerImageVisibility="Collapsed"
            BackStageHeader="MENU"
            ContextAdornerStyle="{StaticResource SyncfusionTemplatedAdornerInternalControlStyle2}"
            EnableMoreCommands="True"
            LayoutMode="Normal"
            MinimizeButtonVisibility="Collapsed"
            ShowCustomizeRibbon="True"
            Visibility="Visible">

            <syncfusion:Ribbon.QuickAccessToolBar>
                <syncfusion:QuickAccessToolBar Margin="65,0,0,0" />
            </syncfusion:Ribbon.QuickAccessToolBar>

            <!--  Contextual Tabs  -->
            <syncfusion:Ribbon.ContextTabGroups>

                <!--  Contextual CR2W group  -->
                <syncfusion:ContextTabGroup
                    x:Name="documentContextTab"
                    Height="90"
                    Margin="14"
                    IsGroupVisible="False"
                    Label="DOCUMENT">
                    
                    <syncfusion:RibbonTab
                        MinWidth="100"
                        Caption="EDIT"
                        IsChecked="True" />
                    
                </syncfusion:ContextTabGroup>

                <!--  Contextual Asset Browser group  -->
                <syncfusion:ContextTabGroup
                    x:Name="abcontextab"
                    Height="90"
                    Margin="14"
                    IsGroupVisible="False"
                    Label="ASSET BROWSER">

                    <syncfusion:RibbonTab
                        MinWidth="100"
                        Caption="ACTIONS"
                        IsChecked="True">

                        <!--  View bar  -->
                        <syncfusion:RibbonBar
                            Name="ABViewActions"
                            Width="auto"
                            Header="View">
                            
                            <!--  Expand Single Nodes  -->
                            <syncfusion:RibbonButton
                                x:Name="ExpandSingleAB"
                                Click="ExpandSingleAB_Click"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Expand node"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconForkAwesome
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="PlusSquareOutline" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                            <!--  Collapse Single Nodes  -->
                            <syncfusion:RibbonButton
                                x:Name="collapseSingleAB"
                                Click="collapseSingleAB_Click"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Collapse node"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconForkAwesome
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="MinusSquareOutline" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                            <!--  Expand All Nodes  -->
                            <syncfusion:RibbonButton
                                x:Name="ExpandAllAB"
                                Click="ExpandAllAB_Click"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Expand all nodes"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconCodicons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="ExpandAll" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                            <!--  Collapse All Nodes  -->
                            <syncfusion:RibbonButton
                                x:Name="collapseAllAB"
                                Click="CollapseAllAB_Click"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Collapse all nodes"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconCodicons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="CollapseAll" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>
                            
                        </syncfusion:RibbonBar>

                        <!--  Search bar  -->
                        <syncfusion:RibbonBar
                            x:Name="ABSearchActions"
                            Width="auto"
                            Header="Search">
                                                       
                            <!--  Search by other keys  -->
                            <syncfusion:DropDownButton
                                x:Name="SearchOther"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Search options"
                                SizeForm="Large"
                                HorizontalAlignment="Left">

                                <syncfusion:DropDownButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconCodicons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="Search" />
                                    </DataTemplate>
                                </syncfusion:DropDownButton.IconTemplate>

                                <syncfusion:DropDownMenuItem x:Name="SearchKindButton" Header="Kind" CommandParameter="kind">
                                    <syncfusion:DropDownMenuItem.Icon>
                                        <iconPacks:PackIconCodicons Kind="FileCode" />
                                    </syncfusion:DropDownMenuItem.Icon>
                                </syncfusion:DropDownMenuItem>
                                <syncfusion:DropDownMenuItem x:Name="SearchHashButton" Header="Hash" CommandParameter="hash">
                                    <syncfusion:DropDownMenuItem.Icon>
                                        <iconPacks:PackIconCodicons Kind="FileCode" />
                                    </syncfusion:DropDownMenuItem.Icon>
                                </syncfusion:DropDownMenuItem>
                                <syncfusion:DropDownMenuItem x:Name="SearchNameButton" Header="Name" CommandParameter="name">
                                    <syncfusion:DropDownMenuItem.Icon>
                                        <iconPacks:PackIconCodicons Kind="FileCode" />
                                    </syncfusion:DropDownMenuItem.Icon>
                                </syncfusion:DropDownMenuItem>
                                <syncfusion:DropDownMenuItem x:Name="SearchLimitButton" Header="Limit" CommandParameter="limit">
                                    <syncfusion:DropDownMenuItem.Icon>
                                        <iconPacks:PackIconCodicons Kind="FileCode" />
                                    </syncfusion:DropDownMenuItem.Icon>
                                </syncfusion:DropDownMenuItem>

                            </syncfusion:DropDownButton>

                            <!--  Open file Location  -->
                            <syncfusion:RibbonButton
                                x:Name="SearchOpenFileLocation"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Open file Location"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconMaterialDesign
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="OpenInBrowser" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                        </syncfusion:RibbonBar>

                        <!--  File bar  -->
                        <syncfusion:RibbonBar
                            x:Name="ABFileActions"
                            Width="auto"
                            Header="File">

                            <!--  Add selected Items(s) to Project Button  -->
                            <syncfusion:RibbonButton
                                x:Name="AddSelectedItemsButton"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Add selected Item(s) to Project"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconVaadinIcons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="FileAdd"
                                            Foreground="ForestGreen"/>
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>
                        </syncfusion:RibbonBar>

                    </syncfusion:RibbonTab>
                </syncfusion:ContextTabGroup>
                
                <!--  Contextual Project Explorer group  -->
                <syncfusion:ContextTabGroup
                    x:Name="projectexplorercontextab"
                    Height="90"
                    Margin="14"
                    IsGroupVisible="False"
                    Label="PROJECT EXPLORER">
                    <syncfusion:RibbonTab
                        MinWidth="100"
                        Caption="ACTIONS"
                        IsChecked="True">
                        <!--  File bar  -->
                        <syncfusion:RibbonBar
                            Name="Actions"
                            Width="auto"
                            Header="File">
                            <!--  Open File Button  -->
                            <syncfusion:RibbonButton
                                x:Name="CPEOpenFileButton"
                                Command="{Binding OpenFileCommand}"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Open"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconCodicons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="File" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                            <!--  Copy File Button  -->
                            <syncfusion:RibbonButton
                                x:Name="CopyFileContext"
                                Command="{Binding CopyFileCommand}"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Copy"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconVaadinIcons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="CopyOutline" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                            <!--  Paste File Button  -->
                            <syncfusion:RibbonButton
                                x:Name="PasteFileContext"
                                Command="{Binding PasteFileCommand}"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Paste"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconVaadinIcons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="Paste" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                            <!--  Delete File Button  -->
                            <syncfusion:RibbonButton
                                x:Name="DeleteFileContext"
                                Command="{Binding DeleteFileCommand}"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Delete"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconMaterialLight
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="Delete" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                            <!--  Rename File Button  -->
                            <syncfusion:RibbonButton
                                x:Name="RenameFileContext"
                                Command="{Binding RenameFileCommand}"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Rename"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconBoxIcons
                                            Width="auto"
                                            Height="auto"
                                            MaxWidth="25"
                                            MaxHeight="34"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="RegularRename" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                            <!--  Open in FileExplorer Button  -->
                            <syncfusion:RibbonButton
                                x:Name="OpeninFileContext"
                                Command="{Binding OpenInFileExplorerCommand}"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Open in File Explorer"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconCodicons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="FolderOpened" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                            <!--  Export File - Simple Button  -->
                            <syncfusion:RibbonButton
                                x:Name="ExportSimpleContext"
                                IconStretch="Fill"
                                IconType="Icon"
                                IsEnabled="False"
                                Label="Simple Export"
                                SizeForm="Large"
                                Visibility="Collapsed">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconCodicons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="Export" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                            <!--  Export File - Advanced Button  -->
                            <syncfusion:RibbonButton
                                x:Name="ExportAdvancedContext"
                                IconStretch="Fill"
                                IconType="Icon"
                                IsEnabled="False"
                                Label="Advanced Export"
                                SizeForm="Large"
                                Visibility="Collapsed">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconCodicons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="Tools" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>
                        </syncfusion:RibbonBar>
                        <!--  Tree bar  -->
                        <syncfusion:RibbonBar
                            Name="ActionsView"
                            Width="auto"
                            Header="View">
                            <!--  Expand All Nodes  -->
                            <syncfusion:RibbonButton
                                x:Name="ExandAllNodesContext"
                                Click="ExandAllNodesContext_Click"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Expand all nodes"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconCodicons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="ExpandAll" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                            <!--  Collapse All Nodes  -->
                            <syncfusion:RibbonButton
                                x:Name="collapseAllNodesContext"
                                Click="collapseAllNodesContext_Click"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Collapse all nodes"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconCodicons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="CollapseAll" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                            <!--  Expand Children Nodes  -->
                            <syncfusion:RibbonButton
                                x:Name="ExandChildrenContext"
                                Click="ExandChildrenContext_Click"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Expand Children"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconBootstrapIcons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="ArrowsExpand" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>

                            <!--  collapse Children Nodes  -->
                            <syncfusion:RibbonButton
                                x:Name="CollapseChildrenContext"
                                Click="CollapseChildrenContext_Click"
                                IconStretch="Fill"
                                IconType="Icon"
                                Label="Collapse Children"
                                SizeForm="Large">

                                <syncfusion:RibbonButton.IconTemplate>
                                    <DataTemplate>
                                        <iconPacks:PackIconBootstrapIcons
                                            Width="auto"
                                            Height="auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Stretch"
                                            Kind="ArrowsCollapse" />
                                    </DataTemplate>
                                </syncfusion:RibbonButton.IconTemplate>
                            </syncfusion:RibbonButton>
                        </syncfusion:RibbonBar>
                    </syncfusion:RibbonTab>
                </syncfusion:ContextTabGroup>

            </syncfusion:Ribbon.ContextTabGroups>

            <!--  Recent Projects Button  -->
            <syncfusion:Ribbon.ApplicationMenu>
                
                <syncfusion:ApplicationMenu
                    Name="_applicationMenu"
                    Width="38"
                    Height="38"
                    syncfusion:Ribbon.KeyTip="F"
                    Foreground="{DynamicResource MahApps.Brushes.Accent3}"
                    IsBelowAppButton="True"
                    IsPopupOpen="False">

                    <syncfusion:RibbonMenuGroup Header="Project">
                        
                        <!--  Recent Projects Button  -->
                        <ToggleButton
                            x:Name="FileDrawer2"
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="auto"
                            Margin="2,0,0,0"
                            HorizontalAlignment="Left"
                            IsChecked="{Binding IsOpen, ElementName=DrawerTop}"
                            Style="{DynamicResource MahApps.Styles.Button.Chromeless}">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconCodicons
                                    Width="16"
                                    Height="16"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Stretch"
                                    Kind="GoToFile" />
                                <TextBlock Margin="2,0,0,0" Text="Recent Projects" />
                            </StackPanel>
                        </ToggleButton>
                        
                        <!--  Open Project Button  -->
                        <syncfusion:RibbonButton
                            x:Name="AppMenuOpenProjectButton"
                            IconStretch="Fill"
                            IconType="Icon"
                            Label="Open Project"
                            SizeForm="Small">
                            <syncfusion:RibbonButton.IconTemplate>
                                <DataTemplate>
                                    <iconPacks:PackIconCodicons
                                        Width="auto"
                                        Height="auto"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Stretch"
                                        Foreground="{DynamicResource MaterialDarkRibbonBackgroundBrush}"
                                        Kind="FolderOpened" />
                                </DataTemplate>
                            </syncfusion:RibbonButton.IconTemplate>
                        </syncfusion:RibbonButton>

                        <!--  New Project Button  -->
                        <syncfusion:RibbonButton
                            x:Name="AppMenuNewProjectButton"
                            IconStretch="Fill"
                            IconType="Icon"
                            Label="New Project"
                            SizeForm="Small">
                            <syncfusion:RibbonButton.IconTemplate>
                                <DataTemplate>
                                    <iconPacks:PackIconCodicons
                                        Width="auto"
                                        Height="auto"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Stretch"
                                        Kind="NewFolder" />
                                </DataTemplate>
                            </syncfusion:RibbonButton.IconTemplate>
                        </syncfusion:RibbonButton>
                        <!--  Pack Project Button  -->
                        <syncfusion:RibbonButton
                            x:Name="AppMenuPackProjectButton"
                            IconStretch="Fill"
                            IconType="Icon"
                            Label="Pack Project"
                            SizeForm="Small">
                            <syncfusion:RibbonButton.IconTemplate>
                                <DataTemplate>
                                    <iconPacks:PackIconCodicons
                                        Width="auto"
                                        Height="auto"
