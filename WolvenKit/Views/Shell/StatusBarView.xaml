<reactiveUi:ReactiveUserControl
    x:TypeArguments="shell:StatusBarViewModel"
    x:Class="WolvenKit.Views.Shell.StatusBarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Fluent="urn:fluent-ribbon"
    xmlns:reactiveUi="http://reactiveui.net"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:shell="clr-namespace:WolvenKit.ViewModels.Shell;assembly=WolvenKit.App"
    d:DataContext="{d:DesignInstance Type=shell:StatusBarViewModel}"
    d:DesignWidth="800"
    mc:Ignorable="d">

    
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <hc:ThemeResources RequestedTheme="Dark" />
                    <hc:Theme />
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
        </Grid.Resources>


        <Fluent:StatusBar Background="{DynamicResource MahApps.Brushes.Accent3}" >

            <Fluent:StatusBarItem Title="Status"
                          
                          HorizontalAlignment="Left">
                <TextBlock Text="{Binding Status}" Margin="10,0,0,0"/>
            </Fluent:StatusBarItem>



            <Fluent:StatusBarItem
                Title="Current Project"
                HorizontalAlignment="Right"
                ToolTip="Current Project"
                Value="Displays current project.">
                <StackPanel Orientation="Horizontal">

                    <TextBlock FontSize="11" Text="Current Project : "/>
                    <TextBlock FontSize="11" FontWeight="Bold"
                                   Foreground="{DynamicResource MahApps.Brushes.AccentBase}"
                                   Text="{Binding CurrentProject}"/>
                </StackPanel>
            </Fluent:StatusBarItem>

            <Separator Width="10" HorizontalAlignment="Right" />

            <Fluent:StatusBarItem
                Title="Version"
                HorizontalAlignment="Right"
                ToolTip="Version"
                Value="Shows the current app version">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontSize="11" Text="Version : "/>
                    <TextBlock FontWeight="Bold" Foreground="{DynamicResource MahApps.Brushes.AccentBase}" Text="{Binding VersionNumber}"/>
                </StackPanel>
            </Fluent:StatusBarItem>

           
        </Fluent:StatusBar>
    </Grid>
</reactiveUi:ReactiveUserControl>
