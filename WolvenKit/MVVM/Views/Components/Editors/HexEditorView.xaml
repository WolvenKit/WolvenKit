<catel:UserControl x:Class="WolvenKit.MVVM.Views.Components.Editors.HexEditorView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:catel="http://schemas.catelproject.com" IsVisibleChanged="UserControl_IsVisibleChanged"
                   xmlns:hc="https://handyorg.github.io/handycontrol" xmlns:hexz="clr-namespace:WpfHexaEditor;assembly=WPFHexaEditor">

    <catel:UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources/>
                <hc:Theme/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </catel:UserControl.Resources>


    <Grid> 
        <hexz:HexEditor Background="{DynamicResource Fluent.Ribbon.Brushes.Backstage.Background}" Width="Auto" Height="Auto"/>

    </Grid>

</catel:UserControl>
