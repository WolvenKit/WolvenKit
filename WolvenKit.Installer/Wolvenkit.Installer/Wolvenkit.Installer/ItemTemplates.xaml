<ResourceDictionary
    x:Class="Wolvenkit.Installer.ItemTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wolvenkit.Installer"
    xmlns:viewmodel="using:Wolvenkit.Installer.ViewModel">

    <DataTemplate x:Key="ControlItemTemplate" x:DataType="viewmodel:PackageViewModel">
        <UserControl>
            <Grid
                x:Name="controlRoot"
                Width="360"
                Height="90"
                Padding="8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">
               
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Width="72" CornerRadius="{ThemeResource ControlCornerRadius}">
                    <Image
                        x:Name="gridImage"
                        Width="48"
                        VerticalAlignment="Center"
                        AutomationProperties.Name="{x:Bind Name}"
                        Source="{x:Bind ImagePath}"
                        Stretch="Uniform" />
                </Grid>
                
                <RelativePanel
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="16,6,0,0">
                    
                    <TextBlock
                        x:Name="titleText"
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        Text="{x:Bind Name}"
                        TextLineBounds="TrimToCapHeight"
                        TextWrapping="NoWrap" />
                    
                    <TextBlock
                        Margin="0,2,8,0"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        RelativePanel.Below="titleText"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind Version}"
                        TextTrimming="CharacterEllipsis" />
                    
                </RelativePanel>

                <RelativePanel
                    Grid.Column="2"
                    Margin="16,6,0,0">

                    <Button Content="Open" 
                            x:Name="OpenButton" Command="{x:Bind OpenCommand}" />
                    <Button Content="Uninstall" x:Name="UninstallButton" 
                            RelativePanel.Below="OpenButton" Margin="0,3,0,0"
                            Command="{x:Bind UninstallCommand}" />

                </RelativePanel>

            </Grid>
        </UserControl>
    </DataTemplate>

    <DataTemplate x:Key="RemoteControlItemTemplate" x:DataType="viewmodel:RemotePackageViewModel">
        <UserControl>
            <Grid
                x:Name="controlRoot"
                Width="360"
                Height="90"
                Padding="8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Width="72" CornerRadius="{ThemeResource ControlCornerRadius}">
                    <Image
                        x:Name="gridImage"
                        Width="48"
                        VerticalAlignment="Center"
                        AutomationProperties.Name="{x:Bind Name}"
                        Source="{x:Bind ImagePath}"
                        Stretch="Uniform" />
                </Grid>

                <RelativePanel
                    Grid.Column="1"
                    Margin="16,6,0,0">

                    <TextBlock
                        x:Name="titleText"
                        Style="{StaticResource BodyStrongTextBlockStyle}"
                        Text="{x:Bind Name}"
                        TextLineBounds="TrimToCapHeight"
                        TextWrapping="NoWrap" />

                    <TextBlock
                        Margin="0,2,8,0"
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        RelativePanel.Below="titleText"
                        Style="{StaticResource CaptionTextBlockStyle}"
                        Text="{x:Bind RemoteVersion}"
                        TextTrimming="CharacterEllipsis" />

                </RelativePanel>

                <RelativePanel
                    Grid.Column="2"
                    Margin="16,6,0,0">

                    <Button
                        x:Name="installButton"
                        Content="Install"
                        
                        >
                        <Button.Flyout>
                            <Flyout>
                                <StackPanel>
                                    <TextBlock Style="{ThemeResource BaseTextBlockStyle}" Text="Install Location" Margin="0,0,0,12" />
                                    <TextBox Text="{x:Bind InstallPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,12" />
                                    <Button Content="Install" Command="{x:Bind InstallCommand}" />
                                </StackPanel>
                            </Flyout>
                        </Button.Flyout>

                    </Button>

                    <!--<Button
                        Margin="0,2,8,0"
                        RelativePanel.Below="installButton"
                        Content="More"
                       />-->

                </RelativePanel>

            </Grid>
        </UserControl>
    </DataTemplate>

</ResourceDictionary>
